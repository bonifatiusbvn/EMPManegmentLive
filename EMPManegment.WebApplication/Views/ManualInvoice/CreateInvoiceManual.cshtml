@model EMPManegment.EntityModels.ViewModels.ManualInvoice.ManualInvoiceMasterModel
@using EMPManegment.Web.Models;
@inject IHttpContextAccessor Accessor;
@inject UserSession _userSession
@inject EMPManegment.Web.Helper.Common CommonHelper

@{
    ViewData["Title"] = "CreateInvoiceManual";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}
<style>
    .error-border {
        border: 2px solid red;
    }
</style>
<input type="hidden" id="DollarAmount" />
<div class="row" style="margin-top:80px;">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0">Create Manual Invoice</h4>
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">InvoicesManual</a></li>
                    <li class="breadcrumb-item active">Create Manual Invoice</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="" id="invoiceList">
            <form id="CreateManualInvoiceForm">
                <div class="row justify-content-center">
                    <div class="col-xxl-12">
                        <div class=" border-bottom border-bottom-dashed">
                            <div class="row">
                                <div class="col-6 col-lg-6">
                                    <div class=" card">
                                        <div class="card-header">
                                            <div class="row align-items-center">
                                                <div class="col">
                                                    <h6 class="mb-0">Vendor Details (To:)</h6>
                                                </div>
                                                <div class="col" style="padding-left: 400px;">
                                                    @if (Model.InvoicesType != null)
                                                    {
                                                        <select class="form-control form-select valid" id="ddlinvoicetype" name="ddlinvoicetype">
                                                            <option value="@Model.InvoiceType">@Model.InvoicesType</option>
                                                        </select>
                                                    }
                                                    else
                                                    {
                                                        <select class="form-control form-select valid" id="ddlinvoicetype" name="ddlinvoicetype">
                                                        </select>
                                                    }
                                                    <input type="hidden" id="txtinvoicetype" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="card-body">
                                            <div class="row">
                                                <div class="col-6 col-lg-6 ">
                                                    <label for="textVendorName" class="form-label">Vendor Name <span class="text-danger">*</span></label>
                                                    <input class="form-control valid" id="textVendorName" name="textVendorName" placeholder="Vendor Name" value="@Model.VendorName" />
                                                </div>
                                                <div class="col-6 col-lg-6 ">
                                                    <label for="textVendorMobile" class="form-label ">Mobile No</label>
                                                    <input type="text" id="textVendorMobile" class="form-control" placeholder="Mobile No" value="@Model.VendorPhoneNo" />
                                                </div>
                                            </div>
                                            <div class="row mt-3">
                                                <div class="col-6 col-lg-6">
                                                    <label for="textVendorAddress" class="form-label ">Billing Address</label>
                                                    <input type="text" id="textVendorAddress" class="form-control" placeholder="Address" value="@Model.VendorAddress" />
                                                </div>
                                                <div class="col-6 col-lg-6">
                                                    <label for="textVendorGSTNumber" class="form-label ">GST NO</label>
                                                    <input type="text" id="textVendorGSTNumber" class="form-control" placeholder="GST No" value="@Model.VendorGstNo" />
                                                </div>
                                                <input type="text" id="textProjectId" class="form-control" hidden value="@UserSession.ProjectId" />
                                                <input type="text" id="textCreatedById" class="form-control" hidden value="@_userSession.UserId" />
                                                <input type="text" id="textMIid" class="form-control" hidden value="@Model.Id" />
                                                <input type="text" id="textCreatedBy" class="form-control" hidden value="@Model.CreatedBy" />
                                                @{
                                                    DateTime createdonDate = Model.CreatedOn != DateTime.MinValue ? Model.CreatedOn : DateTime.Now;
                                                    string formattedCreatedonDate = createdonDate.ToString("yyyy-MM-dd");
                                                }
                                                <input type="date" id="textModelCreatedOn" class="form-control" hidden value="@formattedCreatedonDate" />
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-6 col-lg-6">
                                    <div class="card">
                                        <div class="card-header">
                                            <div class="row align-items-center">
                                                <div class="col">
                                                    <h6 class="mb-0">Invoice Details (From:)</h6>
                                                </div>
                                                <div class="text-center">
                                                    @if (Model.CompanyName == "BONIFATIUS TECHNOLOGIES PRIVATE LIMITED")
                                                    {
                                                        <input class="form-check-input" type="checkbox" id="manualCheckedAll" onclick="fillDetails()" style="margin-left:352px; margin-top:-19px;" checked>
                                                    }
                                                    else
                                                    {
                                                        <input class="form-check-input" type="checkbox" id="manualCheckedAll" onclick="fillDetails()" style="margin-left:352px; margin-top:-19px;">
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                        <div class="card-body">
                                            <div class="row">
                                                <div class="col-md-4">
                                                    <div>
                                                        <label for="textCompanyName" class="form-label">Company Name <span class="text-danger">*</span></label>
                                                    </div>
                                                    <div class="ms-auto">
                                                        @if (Model.CompanyName == "BONIFATIUS TECHNOLOGIES PRIVATE LIMITED")
                                                        {
                                                            <input class="form-control valid" id="textCompanyName" name="textCompanyName" placeholder="Company Name" value="@Model.CompanyName" readonly />
                                                        }
                                                        else
                                                        {
                                                            <input class="form-control valid" id="textCompanyName" name="textCompanyName" placeholder="Company Name" value="@Model.CompanyName" />
                                                        }
                                                    </div>
                                                </div>
                                                <div class="col-5 col-lg-5">
                                                    <label for="textPoId" class="form-label">Invoice No <span class="text-danger">*</span></label>
                                                    <input type="text" class="form-control" id="textInvoiceNo" name="textInvoiceNo" placeholder="Invoice No" value="@Model.InvoiceNo" />
                                                </div>
                                                <div class="col-3 col-lg-3 ">
                                                    <label for="textInvoiceDate" class="form-label">Invoice Date</label>
                                                    @{
                                                        DateTime invoiceDate = Model.InvoiceDate != DateTime.MinValue ? Model.InvoiceDate : DateTime.Now;
                                                        string formattedDate = invoiceDate.ToString("yyyy-MM-dd");
                                                    }
                                                    <input type="date" id="textInvoiceDate" class="form-control" name="textInvoiceDate" placeholder="Select Order-Date" value="@formattedDate">
                                                </div>
                                            </div>
                                            <div class="row mt-3">
                                                <div class="col-6 col-lg-6">
                                                    <label for="textCompanyBillingAddress" class="form-label">Address</label>
                                                    @if (Model.CompanyAddress == "SF-203, Peridot Complex, B/S, Gail Office, Akota, Vadodara-390020")
                                                    {
                                                        <input type="text" id="textCompanyBillingAddress" name="textCompanyBillingAddress" class="form-control" placeholder="Billing Address" value="@Model.CompanyAddress" readonly />
                                                    }
                                                    else
                                                    {
                                                        <input type="text" id="textCompanyBillingAddress" name="textCompanyBillingAddress" class="form-control" placeholder="Billing Address" value="@Model.CompanyAddress" />
                                                    }
                                                </div>
                                                <div class="col-6 col-lg-6">
                                                    <label class="form-label">GST NO</label>
                                                    @if (Model.CompanyGstNo == "24AAKCB0366M1ZJ")
                                                    {
                                                        <input type="text" id="textCompanyGstNo" class="form-control" placeholder="GST No" value="@Model.CompanyGstNo" readonly />
                                                    }
                                                    else
                                                    {
                                                        <input type="text" id="textCompanyGstNo" class="form-control" placeholder="GST No" value="@Model.CompanyGstNo" />
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!---- Product Details ---->
