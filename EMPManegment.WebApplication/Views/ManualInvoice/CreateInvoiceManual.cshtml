                            <div class="card-header">
                                <div class="d-flex align-items-center">
                                    <h5 class="card-title mb-0 flex-grow-1">Product Details</h5>
                                    <div class="flex-shrink-0">
                                        <div class="d-flex flex-wrap gap-2">
                                            <a class="btn btn-block btn-warning" style="margin-left: 665px;" id="ManualInvoiceAddproduct" onclick="AddProductButton()"><i class="ri-add-fill me-1 align-bottom"></i>Add Product</a>
                                            <span id="spnitembutton" style="color:red;"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body pt-0">
                                <div class="table-responsive" style="height:350px">
                                    <table class="table align-middle mb-0">
                                        <thead class="table-secondary">
                                            <tr class="text-uppercase">
                                                <th>#</th>
                                                <th>Product</th>
                                                <th>HSN</th>
                                                <th>Quantity</th>
                                                <th>Qty Type</th>
                                                <th>
                                                    Price
                                                    <select class="form-selectborder-0 bg-light" id="currency-select" onchange="checkCurrencySelection()">
                                                        @if(Model.DollarPrice != null)
                                                        {
                                                            <option value="$" selected>($)</option>
                                                            <option value="₹">(₹)</option>
                                                        }
                                                        else
                                                        {
                                                            <option value="$">($)</option>
                                                            <option value="₹" selected>(₹)</option>
                                                        }
                                                        
                                                    </select>
                                                    <div id="DollarModal" class="modal fade" tabindex="-1" role="dialog">
                                                        <div class="modal-dialog" role="document">
                                                            <div class="modal-content">
                                                                <form id="AddDollarAmountForm">
                                                                    <div class="modal-header bg-primary-subtle p-3">
                                                                        <h5 class="modal-title">$Price</h5>
                                                                        <button type="button" class="btn-close" onclick="CloseDollarModel()"></button>
                                                                    </div>
                                                                    <div class="modal-body">
                                                                        <div class="hstack gap-3 align-items-start">
                                                                            <div class="flex-grow-1">
                                                                                <label class="form-label">1$ = <span class="text-danger">*</span></label>
                                                                                <input type="text" id="txtDollarAmount" value="@Model.DollarPrice" placeholder="(₹)" />
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                    <div class="modal-footer">
                                                                        <button type="button" class="btn btn-light" onclick="CloseDollarModel()">Close</button>
                                                                        <button type="button" class="btn btn-success" onclick="SaveDollarAmount()">Save</button>
                                                                    </div>
                                                                </form>
                                                            </div>
                                                        </div>
                                                    </div>

                                                </th>
                                                <th>
                                                    <div class="row">
                                                        <div class="col-sm-6">
                                                            Discount
                                                        </div>
                                                        <div class="col-sm-6">
                                                            Dis(%)
                                                        </div>

                                                    </div>
                                                </th>
                                                <th>
                                                    <div class="row">
                                                        <div class="col-sm-4">
                                                            GST (%)
                                                        </div>
                                                        <div class="col-sm-4">
                                                            IGST (%)
                                                        </div>
                                                        <div class="col-sm-4">
                                                            GST Amt (₹)
                                                        </div>

                                                    </div>
                                                </th>
                                                <th>Amount (₹)</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        @if (Model.ManualInvoiceDetails != null)
                                        {
                                            <tbody id="addnewproductlink">
                                                @Html.Partial("_AddProductPartialView.cshtml", Model.ManualInvoiceDetails)
                                            </tbody>
                                        }
                                        else
                                        {
                                            <tbody id="addnewproductlink">
                                            </tbody>
                                        }
                                    </table>
                                </div>
                                <div class="card-footer">
                                    <table class="table align-middle mb-0">
                                        <thead class="table align-middle mb-0">
                                            <tr>
                                                <th>#</th>
                                                <th>Total</th>
                                                <th id="TotalProductQuantity"></th>
                                                <th id="TotalProductPrice"></th>
                                                <th></th>
                                                <th id="TotalDiscountPrice"></th>
                                                <th></th>
                                                <th></th>
                                                <th></th>
                                                <th id="TotalProductGST"></th>
                                                <th></th>
                                                <th id="TotalProductAmount"></th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                    </table>
                                </div>
                                <div class=" card">
                                    <div class="row card-body">
                                        <div class="col-lg-6 col-sm-12">
                                            <div class="row">
                                                <div class="col-lg-6 col-sm-12">
                                                    <div class="col-lg-12 mt-2">
                                                        <div class="mb-2">
                                                            <div class="input-group">
                                                                <label class="input-group-text" for="textBuysOrderNo">Buys OrderNo</label>
                                                                <input type="text" id="textBuysOrderNo" class="form-control" placeholder="Buys OrderNo" name="textBuysOrderNo" value="@Model.BuyesOrderNo" />
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-12 mt-2">
                                                        <div class="mb-2">
                                                            <div class="input-group" style="margin-top:15px;">
                                                                <label class="input-group-text" for="textDispatchDocNo">Dispatch Doc No.</label>
                                                                <input type="text" class="form-control" id="textDispatchDocNo" name="textDispatchDocNo" placeholder="Dispatch Doc No." value="@Model.DispatchDocNo">
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-12 mt-2">
                                                        <div class="mb-2">
                                                            <div class="input-group" style="margin-top:15px;">
                                                                <label class="input-group-text" for="textDispatchThrough">Dispatch Through</label>
                                                                <input type="text" class="form-control" id="textDispatchThrough" name="textDispatchThrough" placeholder="Dispatch Through" value="@Model.DispatchThrough">
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-12 mt-2">
                                                        <div class="mb-2">
                                                            <div class="input-group" style="margin-top:15px;">
                                                                <label class="input-group-text" for="textDestination">Destination</label>
                                                                <input type="text" class="form-control" id="textDestination" name="textDestination" placeholder="Destination" value="@Model.Destination">
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-lg-6 col-sm-12">
                                                    <div class="col-lg-12 col-sm-12 mt-2">
                                                        <div class="mb-2">
                                                            <div class="input-group">
                                                                <label class="input-group-text" for="textBuysOrderDate">Buys OrderDate</label>
                                                                @{
                                                                    string Dateformat = Model?.BuyesOrderDate.HasValue ?? false ? Model.BuyesOrderDate.Value.ToString("yyyy-MM-dd") : string.Empty;
                                                                }
                                                                @if (Model.BuyesOrderDate != null)
                                                                {
                                                                    <input type="date" id="textBuysOrderDate1" class="form-control" placeholder="Buys OrderDate" name="textBuysOrderDate" value="@Dateformat" />
                                                                }
                                                                else
                                                                {
                                                                    <input type="date" id="textBuysOrderDate" class="form-control" placeholder="Buys OrderDate" name="textBuysOrderDate" />
                                                                }
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-12 mt-2">
                                                        <div class="mb-2">
                                                            <div class="input-group" style="margin-top:15px;">
                                                                <label class="input-group-text" for="textMotorVehicleNo">Motor Vehicle No.</label>
                                                                <input type="text" class="form-control" id="textMotorVehicleNo" name="textMotorVehicleNo" placeholder="Motor Vehicle No." value="@Model.MotorVehicleNo">
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-12 col-sm-12 mt-2">
                                                        <div class="mb-2">
                                                            <div class="input-group" style="margin-top:15px;">
                                                                <label for="txtpaymentmethod" class="input-group-text">Payment Method </label>
                                                                @if (Model.PaymentMethod != null)
                                                                {
                                                                    <select class="form-control form-select valid" id="txtpaymentmethod" name="txtpaymentmethod">
                                                                        <option selected value="@Model.PaymentMethod">@Model.PaymentMethodName</option>
                                                                    </select>
                                                                }
                                                                else
                                                                {
                                                                    <select class="form-control form-select valid" id="txtpaymentmethod" name="txtpaymentmethod">
                                                                        <option selected value="">--Payment Method--</option>
                                                                    </select>
                                                                }
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-12 col-sm-12 mt-2">
                                                        <div class="mb-2">
                                                            <div class="input-group" style="margin-top:15px;">
                                                                <label for="txtpaymenttype" class="input-group-text">Payment Status</label>
                                                                @if (Model.PaymentStatus != null)
                                                                {
                                                                    <select class="form-control form-select valid" id="txtpaymenttype" name="txtpaymenttype">
                                                                        <option selected value="@Model.PaymentStatus">@Model.PaymentStatusName</option>
                                                                    </select>
                                                                }
                                                                else
                                                                {
                                                                    <select class="form-control form-select valid" id="txtpaymenttype" name="txtpaymenttype">
                                                                        <option selected value="">--Payment Status--</option>
                                                                    </select>
                                                                }
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="col-lg-6 col-sm-12 ac-invoice-total">
                                            <div class="table">
                                                <table class="table table-borderless table-sm table-nowrap align-middle mb-0">
                                                    <tbody>
                                                        <tr>
                                                            <th scope="row">Sub Total</th>
                                                            <td style="width:150px;">
                                                                <input type="text" class="form-control border-0" id="cart-subtotal" placeholder="₹0.00" readonly />
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <th scope="row">Total GST</th>
                                                            <td>
                                                                <input type="text" class="form-control border-0" id="totalgst" placeholder="₹0.00" readonly value="@Model.TotalGst" />
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <th scope="row">Discount <small class="text-muted"></small></th>
                                                            <td>
                                                                <input type="text" class="form-control border-0" id="cart-discount" placeholder="₹0.00" readonly />
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <th>
                                                                Roundoff
                                                            </th>
                                                            <td>
                                                                <input type="text" class="form-control bg-light border-0" name="txtroundOff" id="cart-roundOff" placeholder="₹0.00" min="-0.99" max="0.99" value="@Model.RoundOff" />
                                                            </td>
                                                        </tr>
                                                        <tr class="border-top border-top-dashed">
                                                            <th scope="row">Total Amount</th>
                                                            <td>
                                                                <input type="text" class="form-control border-0" id="cart-total" placeholder="₹0.00" readonly value="@Model.TotalAmount" />
                                                            </td>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6 col-sm-12">
                                <div class="card">
                                    <h5 class="card-header">
                                        Shipping Addresses
                                    </h5>
                                    <div class="card-body">
                                        @{
                                            bool isSameAddress = Model.VendorAddress == Model.ShippingAddress;
                                        }
                                        <input type="checkbox" id="hideShippingAddress" name="hideShippingAddress" onchange="toggleShippingAddress()" @(isSameAddress ? "checked" : "")>
                                        <label for="hideShippingAddress"><b>Is Your Billing Address the same as Shipping Address?</b></label>
                                        <div id="shippingAddressFields" style="display:@(isSameAddress ? "none" : "block");">
                                            <textarea type="text" id="textShippingAddress" name="textShippingAddress" class="form-control" placeholder="Shipping Address">@Model.ShippingAddress</textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div id="dvshipping" class="col-lg-6">
                            <div class="row">
                            </div>
                        </div>
                        <!--end row-->
                        <div class="card">
                            <div class="card-body">
                                <div class="hstack gap-2 justify-content-end d-print-none mt-4">
                                    @if (Model.Id != Guid.Empty)
                                    {
                                        <button type="button" class="btn btn-lg btn-primary" id="UpdateManualInvoiceButton" onclick="UpdateManualInvoiceDetails()" style="width: 160px;height: 50px;"><i class="ri-printer-line align-bottom me-1"></i>Update</button>
                                    }
                                    else
                                    {
                                        <button type="button" class="btn btn-lg btn-success" id="SaveManualInvoiceButton" onclick="InsertManualInvoiceDetails()" style="width: 160px;height: 50px;"><i class="ri-printer-line align-bottom me-1"></i>Create</button>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--end col-->
                </div>
            </form>
        </div>
    </div>
</div>

