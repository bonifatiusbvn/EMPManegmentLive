<script type="text/javascript">
    var userPermissions = '@Html.Raw(Json.Serialize(UserSession.FormPermisionData))';

    function fillDetails() {
        var isChecked = document.getElementById("manualCheckedAll").checked;
        var companyName = document.getElementById("textCompanyName");
        var billingAddress = document.getElementById("textCompanyBillingAddress");
        var gstNo = document.getElementById("textCompanyGstNo");

        if (isChecked) {
            companyName.value = "BONIFATIUS TECHNOLOGIES PRIVATE LIMITED";
            billingAddress.value = "SF-203, Peridot Complex, B/S, Gail Office, Akota, Vadodara-390020";
            gstNo.value = "24AAKCB0366M1ZJ";

            companyName.readOnly = true;
            billingAddress.readOnly = true;
            gstNo.readOnly = true;
        } else {
            companyName.value = "";
            billingAddress.value = "";
            gstNo.value = "";

            companyName.readOnly = false;
            billingAddress.readOnly = false;
            gstNo.readOnly = false;
        }
    }



</script>
