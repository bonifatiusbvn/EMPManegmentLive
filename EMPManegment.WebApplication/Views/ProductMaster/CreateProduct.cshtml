<script src="~/UserHome/minimal/assets/libs/dropzone/dropzone-min.js"></script>

<script src="~/UserHome/minimal/assets/js/pages/ecommerce-product-create.init.js"></script>
<script src="~/UserHome/minimal/assets/libs/prismjs/prism.js"></script>

<!-- Lord Icon -->
<script src="~/UserHome/minimal/cdn.lordicon.com/mssddfmo.js"></script>

<!-- Modal Js -->
