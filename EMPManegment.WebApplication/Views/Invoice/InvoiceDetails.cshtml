@model EMPManegment.EntityModels.ViewModels.Invoice.InvoiceMasterModel
@using EMPManegment.Web.Models;
@inject IHttpContextAccessor Accessor;
@inject UserSession _userSession
@inject EMPManegment.Web.Helper.Common CommonHelper

@{
    ViewData["Title"] = "DisplayInvoiceDetails";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<style>
    .VerticalBorder {
        border-left: 2px solid lightgray;
        height: 100%;
    }

    .Address-Details {
        display: flex;
        border: 1px solid lightgray;
        height: 155px;
    }
</style>

@{
    var firstItem = Model;
    decimal? totalAmount = 0;
    decimal? totalGst = 0;
}
<div class="row" style="margin-top:80px;">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0">INVOICE DETAILS</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Invoices</a></li>
                    <li class="breadcrumb-item active">Invoices Details</li>
                </ol>
            </div>

        </div>
    </div>
</div>
<div class="row justify-content-center">
    <div class="col-xxl-9">
        <div class="card">
            <div class="row">
                <div class="card-body" id="cardbody1">
                    <div class="d-flex">
                        <div class="flex-grow-1 col-6" style="border: 1px solid lightgray;">
                            <img src="~/assets/images/logo - bonifatius.jpeg" style="height: 25px;" />
                            <div class="flex-shrink-0 mt-sm-0 mt-3">
                                <span class="text-muted"><b>@firstItem.VendorName</b></span> <br />
                                <span class="text-muted">@firstItem.VendorFullAddress</span><br />
                                <span class="text-muted text-uppercase">GSTIN/UIN :@firstItem.VendorGstnumber</span><br />
                                <p class="text-muted text-uppercase">Email :@Model.VendorEmail</p>
                            </div>
                            <div style="border: 0px solid lightgray;border-width:0.5px;margin:-8px;width:102.5%;"></div>
                            <br />
                            <div class="flex-shrink-0 mt-sm-0 mt-3">
                                <p class="text-muted"><b>Consignee (Ship to):</b></p>
                                <span class="text-muted text-uppercase"><b>@firstItem.ProjectName</b></span><br />
                                <span class="text-muted">@firstItem.ShippingAddress</span><br />
                                <span class="text-muted">GSTIN:- </span>
                            </div>
                        </div>
                        <div class="flex-grow-1 col-6" style="border: 1px solid lightgray;">
                            <div class="row">
                                <div class="col-6">
                                    @if (!string.IsNullOrEmpty(firstItem.InvoiceNo))
                                    {
                                        <div class="flex-shrink-0 mt-sm-0 mt-3 ">
                                            <label class="form-label">Invoice No</label>
                                            <p class="text-muted text-uppercase"><b>@firstItem.InvoiceNo</b></p>
                                        </div>
                                        <div style="border: 0px solid lightgray;border-width:0.5px;margin:-8px;width:105%;"></div>
                                        <br />
                                    }
                                    @if (!string.IsNullOrEmpty(firstItem.DispatchThrough))
                                    {
                                        <div class="flex-shrink-0 mt-sm-0 mt-3 ">
                                            <label class="form-label">Dispatched Through</label>
                                            <p class="text-muted text-uppercase"><b>@firstItem.DispatchThrough</b></p>
                                        </div>
                                        <div style="border: 0px solid lightgray;border-width:0.5px;margin:-8px;width:105%;"></div>
                                        <br />
                                    }
                                    @if (firstItem?.BuyesOrderDate != null)
                                    {
                                        <div class="flex-shrink-0 mt-sm-0 mt-3 ">
                                            <label class="form-label">Buy's Order Date</label>
                                            <p class="text-muted text-uppercase">@CommonHelper.GetCommonDateFormat(@firstItem.BuyesOrderDate ?? DateTime.MinValue)</p>
                                        </div>
                                        <div style="border: 0px solid lightgray;border-width:0.5px;margin:-8px;width:105%;"></div>
                                        <br />
                                    }
                                    @if (!string.IsNullOrEmpty(firstItem.PaymentStatusName))
                                    {
                                        <div class="flex-shrink-0 mt-sm-0 mt-3 ">
                                            <label class="form-label">Payment Status</label>
                                            <p class="text-muted text-uppercase">@firstItem.PaymentStatusName</p>
                                        </div>
                                    }
                                </div>
                                <div style="border-left: 2px solid lightgray; height: 100%;position: absolute;left: 50%;"></div>
                                <div class="col-6">
                                    @if (firstItem?.InvoiceDate != null)
                                    {
                                        <div class="flex-shrink-0 mt-sm-0 mt-3 ">
                                            <label class="form-label">Date</label>
                                            <p><span class="text-muted fw-normal">@CommonHelper.GetCommonDateFormat(firstItem.InvoiceDate)</span></p>
                                        </div>
                                        <div style="border: 0px solid lightgray;border-width:0.5px;margin:-8px;width:105%;"></div>
                                        <br />
                                    }
                                    @if (!string.IsNullOrEmpty(firstItem.BuyesOrderNo))
                                    {
                                        <div class="flex-shrink-0 mt-sm-0 mt-3 ">
                                            <label class="form-label">Buyer's Order No</label>
                                            <p class="text-muted text-uppercase">@firstItem.BuyesOrderNo</p>
                                        </div>
                                        <div style="border: 0px solid lightgray;border-width:0.5px;margin:-8px;width:105%;"></div>
                                        <br />
                                    }
                                    @if (!string.IsNullOrEmpty(firstItem.PaymentMethodName))
                                    {
                                        <div class="flex-shrink-0 mt-sm-0 mt-3">
                                            <label class="form-label">Payment Method</label>
                                            <p class="text-muted">@firstItem.PaymentMethodName</p>
                                        </div>
                                        <div style="border: 0px solid lightgray;border-width:0.5px;margin:-8px;width:105%;"></div>
                                        <br />
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex Address-Details">
                        <div class="flex-grow-1 col-6">
                            <p class="text-muted"><b>Buyer (Bill to)</b></p>
                            <span class="text-muted text-uppercase"><b>@firstItem.VendorCompanyName</b></span><br />
                            <span class="text-muted text-uppercase">@firstItem.ShippingAddress</span><br />
                            <p class="text-muted text-uppercase"><b>GSTIN/UIN :@firstItem.VendorGstnumber</b></p>
                        </div>
                        <div class="VerticalBorder"></div>
                        <div class="flex-grow-1 col-6">
                            <label class="form-label">Destination</label>
                            <p class="text-muted text-uppercase">@Model.ShippingAddress</p>
                        </div>
                    </div>
                    <br />
                    <table class="table text-center align-middle invoice-table" style="border: 1px solid lightgray;">
                        <thead class="table-info text-muted">
                            <tr class="table-active" style="border: 1px solid lightgray;">
                                <th class="border">SINo.</th>
                                <th class="border">Product Details</th>
                                <th class="border">Price</th>
                                <th class="border">Quantity</th>
                                <th class="border">Product Type</th>
                                <th class="border">Discount</th>
                                <th class="border">Amount</th>
                                <th class="border">Total Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int index = 1;
                                decimal? subtotal = 0;
                                decimal? totalAmt = 0;
                            }
                            @foreach (var item in Model.InvoiceDetails)
                            {
                                subtotal = (item.Quantity * item.PerUnitPrice);
                                var SubTotal = string.Format("{0:n2}", subtotal);
                                totalAmt = (item.Quantity * item.PerUnitPrice) - item.DiscountAmount;

                                <tr>
                                    <td class="border">@index</td>
                                    <td class="text-start border">
                                        <span class="fw-medium" id="txtproductname">@item.Product</span>
                                    </td>
                                    <td class="border" id="txtHSN">@item.PerUnitPrice</td>
                                    <td class="border" id="txtquantity">@item.Quantity</td>
                                    <td class="border" id="txtper">@item.ProductTypeName</td>
                                    <td class="border" id="txtper">@item.DiscountAmount</td>
                                    <td class="border" id="txttotal">₹@SubTotal</td>
                                    <td class="border" id="txttotal"><b>₹@totalAmt</b></td>
                                </tr>
                                index++;
                            }
                            <tr>
                                <td><div class="ProductTotalHR"></div></td>
                                <td><div class="ProductTotalHR"></div></td>
                                <td><div class="ProductTotalHR"></div></td>
                                <td><div class="ProductTotalHR"></div></td>
                                <td><div class="ProductTotalHR"></div></td>
                                <td><div class="ProductTotalHR"></div></td>
                                <td><div class="ProductTotalHR"></div></td>
                                <td><div class="ProductTotalHR"></div></td>
                            </tr>
                            <tr>
                                <td class="border"></td>
                                <td class="text-end border">GST</td>
                                <td class="border"></td>
                                <td class="border"></td>
                                <td class="border"></td>
                                <td class="border"></td>
                                <td class="border"></td>
                                <td class="border"><b>₹@firstItem.TotalGst</b></td>
                            </tr>
                            <tr>
                                <td class="border"></td>
                                <td class="text-end border">Round Off</td>
                                <td class="border"></td>
                                <td class="border"></td>
                                <td class="border"></td>
                                <td class="border"></td>
                                <td class="border"></td>
                                <td class="border">@firstItem.RoundOff</td>
                            </tr>
                            <tr>
                                <td class="border"></td>
                                <td class="text-end border">Total</td>
                                <td class="border"></td>
                                <td class="border"></td>
                                <td class="border"></td>
                                <td class="border"></td>
                                <td class="border"></td>
                                <td class="border"><b>₹@firstItem.TotalAmount</b></td>
                            </tr>
                        </tbody>
                    </table><!--end table-->
                    <div class="flex-grow-1 col-12">
                        <span class="text-muted">Amount Chargeable (in words)</span><br />
                        <p class="text-muted text-capitalize"><b>INR @ViewData["TotalAmountInWords"]</b></p>
                    </div>
                    <table class="table text-center align-middle invoice-table" style="border: 1px solid lightgray;">
                        <thead class="table-info text-muted">
                            <tr class="table-active" style="border: 1px solid lightgray;">
                                <th class="border">HSN / SAC</th>
                                <th class="border">Taxable value</th>
                                <th class="border">Discount</th>
                                <th class="border">GST%</th>
                                <th class="border">Amount</th>
                                <th class="border">Total Tax Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int? Index = 1;
                                decimal? subTotal = 0;
                                decimal? GstAmount = 0;
                                decimal? TotalofSubtotal = 0;
                                decimal? DiscountTotal = 0;
                            }
                            @foreach (var item in Model.InvoiceDetails)
                            {
                                subTotal = (item.Quantity * item.PerUnitPrice);
                                GstAmount = (subtotal * item.GstPer) / 100;
                                TotalofSubtotal += subTotal;
                                DiscountTotal += item.DiscountAmount;
                                <tr>
                                    <td class="border">@item.Hsn</td>
                                    <td class="border">₹@subTotal</td>
                                    <td class="border">₹@item.DiscountAmount</td>
                                    <td class="border">@item.GstPer%</td>
                                    <td class="border">@GstAmount?.ToString("0.00")</td>
                                    <td class="border"><b>₹@GstAmount?.ToString("0.00")</b></td>
                                </tr>
                                Index++;
                            }
                            <tr>
                                <td class="border">Total</td>
                                <td class="border"><b>₹@TotalofSubtotal</b></td>
                                <td class="border"><b>₹@DiscountTotal</b></td>
                                <td class="border"><b>₹@DiscountTotal</b></td>
                                <td class="border"><b>@firstItem.TotalGst</b></td>
                                <td class="border"><b>₹@firstItem.TotalGst</b></td>
                            </tr>
                        </tbody>
                    </table><!--end table-->
                    <span class="text-muted">Tax Amount (in words) : </span>
                    <span class="text-muted text-capitalize"><b>INR @ViewData["TotalGstInWords"]</b></span>
                    <br />
                    <div class="d-flex" style="border: 1px solid lightgray;">
                        <div class="flex-grow-1 col-6">
                            <p class="text-muted">Company's PAN : <span> </span><span class="text-muted"><b></b></span></p>
                            <span class="text-muted"><u>Description</u></span><br />
                            <span class="text-muted"></span><br />
                        </div>
                        <div class="flex-grow-1 col-6">
                            <span class="form-label">Company's Bank Details</span><br />
                            <span class="text-muted"> Bank Name :  <span><b>@Model.VendorBankName</b></span></span> <br />
                            <span class="text-muted"> A/c No :  <span><b>@Model.VendorBankAccountNo</b></span></span> <br />
                            <p class="text-muted">Branch & IFS Code  :<span><b>@Model.VendorBankBranch/@Model.VendorBankIfsc</b></span></p>
                            <div class="text-end p-1" style="border: 1px solid lightgray; height:70px;">
                                <p class="text-muted"><b></b></p>
                                <br />
                                <p class="text-muted" style="margin-bottom:-6px;">Authorised Signatory</p>
                            </div>
                        </div>
                    </div>
                    <div class="card d-print-none">
                        <div class="card-body">
                            <div class="d-lg-flex align-items-center gap-3">
                                <a id="PrintInvoicePage" class="btn btn-primary btn-ecomm" style="margin-left: 950px;width: 185px;"><i class="fadeIn animated bx bx-printer"></i>Print</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <!--Invoice create init js-->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/moduls/invoicemasterscript.js" asp-append-version="true"></script>
    <script type="text/javascript">
        var userPermissions = '@Html.Raw(Json.Serialize(UserSession.FormPermisionData))';
    </script>
    <script>
        document.getElementById('PrintInvoicePage').addEventListener('click', function () {

            var invoiceId = '@firstItem.Id';
            fetch(`/Invoice/PrintInvoiceDetails?Id=${invoiceId}`)
                .then(response => response.text())
                .then(htmlContent => {
                    var printWindow = window.open('', '', 'width=800,height=600');
                    printWindow.document.open();
                    printWindow.document.write(htmlContent);
                    printWindow.document.close();
                    printWindow.print();
                })
                .catch(error => console.error('Error fetching the invoice details:', error));
        });
    </script>
}


