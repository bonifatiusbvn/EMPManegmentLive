@model EMPManegment.EntityModels.ViewModels.Invoice.InvoiceMasterModel
@using EMPManegment.Web.Models;
@inject IHttpContextAccessor Accessor;
@inject UserSession _userSession
@inject EMPManegment.Web.Helper.Common CommonHelper

@{
    ViewData["Title"] = "DisplayInvoiceDetails";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<style>
    .border-right {
        border-right: 2px solid black;
    }
</style>
@{
    decimal? totalAmount = 0;
    decimal? totalGst = 0;
}
<div class="row" style="margin-top:80px;">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0">INVOICE DETAILS</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Invoices</a></li>
                    <li class="breadcrumb-item active">Invoices Details</li>
                </ol>
            </div>

        </div>
    </div>
</div>
<div class="row justify-content-center" id="displayInvoiceDetail">
    <div class="col-xxl-9">
        <div class="card border">
            <div class="row">
                <div class="card-body" id="cardbody1">
                    <div class="d-flex">

                        <div class="flex-grow-1 col-6 border">
                            <img src="~/assets/images/logo - bonifatius.jpeg" style="height: 25px;" />
                            <div class="flex-shrink-0 mt-sm-0 mt-3 border">
                                <span class="text-muted"><b>@Model.VendorName</b></span> <br />
                                <span class="text-muted">@Model.VendorFullAddress</span><br />
                                <span class="text-muted text-uppercase">GSTIN/UIN :@Model.VendorGstnumber</span><br />
                                <p class="text-muted text-uppercase">Email :@Model.VendorEmail</p>
                            </div>
                            <div class="flex-shrink-0 mt-sm-0 mt-3 border">
                                <p class="text-muted"><b>Consignee (Ship to):</b></p>
                                <span class="text-muted text-uppercase"><b>@Model.ProjectName</b></span><br />
                                <span class="text-muted">@Model.ShippingAddress</span><br />
                                <span class="text-muted">GSTIN:- </span>
                            </div>
                        </div>
                        <div class="flex-grow-1 col-3">
                            <div class="flex-shrink-0 mt-sm-0 mt-3 border">
                                <label class="form-label">Invoice No</label>
                                <p class="text-muted text-uppercase"><b>@Model.InvoiceNo</b></p>
                            </div>
                            <div class="flex-shrink-0 mt-sm-0 mt-3 border">
                                <label class="form-label">Delivery Note</label>
                                <p class="text-muted"></p>
                            </div>
                            <div class="flex-shrink-0 mt-sm-0 mt-3 border">
                                <label class="form-label">Reference No. & Date</label>
                                <p><span class="text-muted"><b></b></span></p>
                            </div>
                            <div class="flex-shrink-0 mt-sm-0 mt-3 border">
                                <label class="form-label">Buyer's Order No</label>
                                <p class="text-muted text-uppercase">@Model.BuyesOrderNo</p>
                            </div>
                            <div class="flex-shrink-0 mt-sm-0 mt-3 border">
                                <label class="form-label">Dispatch Doc No.</label>
                                <p class="text-muted text-uppercase"><b></b></p>
                            </div>
                            <div class="flex-shrink-0 mt-sm-0 mt-3 border">
                                <label class="form-label">Dispatched Through</label>
                                <p class="text-muted text-uppercase"><b>@Model.DispatchThrough</b></p>
                            </div>
                            <div class="flex-shrink-0 mt-sm-0 mt-3 border">
                                <label class="form-label">Bill of Landing/LR-RR No.</label>
                                <p class="text-muted text-uppercase"><b></b></p>
                            </div>
                        </div>
                        <div class="flex-grow-1 col-3">
                            <div class="flex-shrink-0 mt-sm-0 mt-3 border">
                                <label class="form-label">Date</label>
                                <p><span class="text-muted fw-normal">@CommonHelper.GetCommonDateFormat(Model.InvoiceDate)</span></p>
                            </div>
                            <div class="flex-shrink-0 mt-sm-0 mt-3 border">
                                <label class="form-label">Mode/Terms of Payment</label>
                                <p><span class="text-muted text-uppercase"><b>7 days</b></span></p>
                            </div>
                            <div class="flex-shrink-0 mt-sm-0 mt-3 border">
                                <label class="form-label">Other Reference</label>
                                <p class="text-muted"></p>
                            </div>
                            <div class="flex-shrink-0 mt-sm-0 mt-3 border">
                                <label class="form-label">Buy's Order Date</label>
                                <p class="text-muted text-uppercase">@CommonHelper.GetCommonDateFormat(Model?.BuyesOrderDate ?? DateTime.MinValue)</p>
                            </div>
                            <div class="flex-shrink-0 mt-sm-0 mt-3 border">
                                <label class="form-label">Delivery Note Date</label>
                                <p class="text-muted text-uppercase"><b></b></p>
                            </div>
                            <div class="flex-shrink-0 mt-sm-0 mt-3 border">
                                <label class="form-label">Destination</label>
                                <p class="text-muted text-uppercase"><b>@Model.ShippingAddress</b></p>
                            </div>
                            <div class="flex-shrink-0 mt-sm-0 mt-3 border">
                                <label class="form-label">Motor Vehicle No</label>
                                <p class="text-muted text-uppercase"><b>@Model.DispatchThrough</b></p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body" id="cardbody2">
                    <div class="d-flex">
                        <div class="flex-grow-1 col-6 border">
                            <p class="text-muted"><b>Buyer (Bill to)</b></p>
                            <span class="text-muted text-uppercase"><b>@Model.VendorCompanyName</b></span><br />
                            <span class="text-muted text-uppercase">@Model.ShippingAddress</span><br />
                            <p class="text-muted text-uppercase"><b>GSTIN/UIN :@Model.VendorGstnumber</b></p>
                        </div>
                        <div class="flex-grow-1 col-6 border">
                            <label class="form-label">Terms of Delivery</label>
                            <p class="text-muted"><b>Dispatched from Rakhial,Ahemdabad</b></p>
                        </div>
                    </div>
                </div>
                <div class="card-body" id="cardbody3">
                    <table class="table table-border text-center table-nowrap align-middle mb-0">
                        <thead class="table-info text-muted border">
                            <tr class="table-active">
                                <th class="border">SINo.</th>
                                <th class="border">Product Details</th>
                                <th class="border">Price</th>
                                <th class="border">Discount</th>
                                <th class="border">Quantity</th>
                                <th class="border">Unit</th>
                                <th class="border">Amount</th>
                            </tr>
                        </thead>
                        <tbody id="products-list">
                            @{
                                int index = 1;
                                decimal? subtotal = 0;
                            }
                            @foreach (var item in Model.InvoiceDetails)
                            {
                                subtotal = (item.Quantity * item.Price);
                                <tr class="product">
                                    <td class="border">@index</td>
                                    <td class="text-start border">
                                        <span class="fw-medium" id="txtproductname">@item.Product</span>
                                    </td>
                                    <td class="border" id="txtHSN">@item.Price</td>
                                    <td class="border" id="txtHSN">@item.DiscountAmount</td>
                                    <td class="border" id="txtquantity">@item.Quantity</td>
                                    <td class="border" id="txtper">@item.ProductTypeName</td>
                                    <td class="border" id="txttotal">₹@subtotal</td>
                                </tr>
                                index++;
                            }
                            <tr>
                            </tr>
                            <tr>
                                <td class="border"></td>
                                <td class="text-end border">FREIGHT CHARGES</td>
                                <td class="border"></td>
                                <td class="border"></td>
                                <td class="border"></td>
                                <td class="border"></td>
                            </tr>
                            <tr>
                                <td class="border"></td>
                                <td class="text-end border">GST</td>
                                <td class="border"></td>
                                <td class="border"></td>
                                <td class="border"></td>
                                <td class="border">₹@Model.TotalGst</td>
                            </tr>
                            <tr>
                                <td class="border"></td>
                                <td class="text-end border">Round Off</td>
                                <td class="border"></td>
                                <td class="border"></td>
                                <td class="border"></td>
                                <td class="border">@Model.RoundOff</td>
                            </tr>
                            <tr>
                                <td class="border"></td>
                                <td class="text-end border">Total</td>
                                <td class="border"></td>
                                <td class="border"></td>
                                <td class="border"></td>
                                <td class="border">₹@Model.TotalAmount</td>
                            </tr>
                        </tbody>
                    </table><!--end table-->
                    <div class="noresult" style="display: none">
                        <div class="text-center">
                            <lord-icon src="https://cdn.lordicon.com/msoeawqm.json" trigger="loop" colors="primary:#25a0e2,secondary:#00bd9d" style="width:75px;height:75px">
                            </lord-icon>
                            <h5 class="mt-2">Sorry! No Result Found</h5>
                            <p class="text-muted mb-0">
                                We've searched more than 150+ transactions We did not find any
                                transactions for you search.
                            </p>
                        </div>
                    </div>
                    <div class="flex-grow-1 col-12">
                        <span class="text-muted">Amount Chargeable (in words)</span><br />
                        <p class="text-muted text-capitalize"><b>INR @ViewData["TotalAmountInWords"]</b></p>
                    </div>
                </div>
                <div class="card-body" id="cardbody4">
                    <table class="table table-border text-center table-nowrap align-middle mb-0">
                        <thead class="table-info text-muted border">
                            <tr class="table-active">
                                <th class="border">HSN / SAC</th>
                                <th class="border">Taxable value</th>
                                <th class="border">GST%</th>
                                <th class="border">Amount</th>
                                <th class="text-end border col-2">Total Tax Amount</th>
                            </tr>
                        </thead>
                        <tbody id="products-list">
                            @{
                                decimal? subTotal = 0;
                            }
                            @foreach (var item in Model.InvoiceDetails)
                            {
                                subTotal = (item.Quantity * item.PerUnitPrice);
                                <tr>
                                    <td class="border" id="txtHSN">@item.Hsn</td>
                                    <td class="border" id="txtTaxablevalue">₹@subtotal</td>
                                    <td class="border" id="txtgstpercentage">@item.GstPer%</td>
                                    <td class="border" id="txtgstpercentage">₹@item.GstAmount</td>
                                    <td class="border" id="txtgsttotal"></td>
                                </tr>
                                index++;
                            }
                            <tr>
                                <td class="border">Total</td>
                                <td class="border"></td>
                                <td class="border">
                                    <div class="d-flex">
                                        <div class="flex-grow-1 col-5">
                                            <label class="form-label"></label>
                                        </div>
                                        <div class="flex-grow-1 col-7">
                                            <label class="form-label"></label>
                                        </div>
                                    </div>
                                </td>
                                <td class="border">₹@Model.TotalGst</td>
                            </tr>
                        </tbody>
                    </table><!--end table-->
                    <div class="noresult" style="display: none">
                        <div class="text-center">
                            <lord-icon src="https://cdn.lordicon.com/msoeawqm.json" trigger="loop" colors="primary:#25a0e2,secondary:#00bd9d" style="width:75px;height:75px">
                            </lord-icon>
                            <h5 class="mt-2">Sorry! No Result Found</h5>
                            <p class="text-muted mb-0">
                                We've searched more than 150+ transactions We did not find any
                                transactions for you search.
                            </p>
                        </div>
                    </div>
                    <span class="text-muted">Tax Amount (in words) : </span>
                    <span class="text-muted text-capitalize"><b>INR @ViewData["TotalAmountInWords"]</b></span>
                    <div class="d-flex">
                        <div class="flex-grow-1 col-6">
                            <p class="text-muted">Company's PAN : <span> </span><span class="text-muted"><b></b></span></p>
                            <span class="text-muted"><u>Description</u></span><br />
                            <span class="text-muted"></span><br />
                        </div>
                        <div class="flex-grow-1 col-6">
                            <span class="form-label">Company's Bank Details</span><br />
                            <span class="text-muted"> Bank Name :  <span><b>@Model.VendorBankName</b></span></span> <br />
                            <span class="text-muted"> A/c No :  <span><b>@Model.VendorBankAccountNo</b></span></span> <br />
                            <p class="text-muted">Branch & IFS Code  :       <span><b>@Model.VendorBankBranch/@Model.VendorBankIfsc</b></span></p>
                            <div class="border border-box text-end p-1" style="border: solid black">
                                <p class="text-muted"><b>@Model.VendorAccountHolderName</b></p>
                                <br />
                                <br />
                                <p class="text-muted">Authorised Signatory</p>
                            </div>
                        </div>
                    </div>
                    <div class="card d-print-none">
                        <div class="card-body">
                            <div class="d-lg-flex align-items-center gap-3">
                                <a href="javascript:window.print()" class="btn btn-primary btn-ecomm" style="margin-left: 950px;width: 185px;"><i class="fadeIn animated bx bx-printer"></i>Print</a>
                                @*  <a onclick="fn_PrintInvoicePage()" class="btn btn-primary btn-ecomm" style="margin-left: 950px;width: 185px;"><i class="fadeIn animated bx bx-printer"></i>Print</a>*@
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    var userPermissions = '@Html.Raw(Json.Serialize(UserSession.FormPermisionData))';
</script>
<!--Invoice create init js-->
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/moduls/invoicemasterscript.js" asp-append-version="true"></script>



