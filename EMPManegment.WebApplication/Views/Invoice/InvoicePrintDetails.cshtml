                                    @if (Model.InvoiceDetails.Any(a => a.Igst > 0))
                                    {
                                        <td><div class="GSTTotalHR"></div></td>
                                        <td><div class="GSTTotalHR"></div></td>
                                    }
                                    <td><div class="GSTTotalHR"></div></td>
                                </tr>
                                <tr>
                                    <td style="text-align: end;">Total</td>
                                    <td><b>₹@(TotalofSubtotal?.ToString("N2") ?? "0.00")</b></td>
                                    <td></td>
                                    <td><b>@(TotalCenteralTax?.ToString("N2") ?? "0.00")</b></td>
                                    <td></td>
                                    <td><b>@(TotalStateTax?.ToString("N2") ?? "0.00")</b></td>
                                    @if (Model.InvoiceDetails.Any(a => a.Igst > 0))
                                    {
                                        <td></td>
                                        <td><b>@(TotalIntegratedTax?.ToString("N2") ?? "0.00")</b></td>
                                    }
                                    <td><b>₹@(TotalGSTAmount?.ToString("N2") ?? "0.00")</b></td>
