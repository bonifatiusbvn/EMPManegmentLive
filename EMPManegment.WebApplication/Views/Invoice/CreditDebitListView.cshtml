                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary m-3" data-bs-dismiss="modal"><i class="ri-close-line me-1 align-middle"></i> Close</button>
                                </div>
                            </div><!-- /.modal-content -->
                        </div><!-- /.modal-dialog -->
                    </div><!-- /.modal -->
                    <!-- Modal -->
                    <div class="modal fade zoomIn" id="addSeller" tabindex="-1" aria-labelledby="addSellerLabel" aria-hidden="true">
