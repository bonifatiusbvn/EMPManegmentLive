@{
    ViewData["Title"] = "GetAllTransaction";
    Layout = "~/Views/Shared/_UserHomeLayout.cshtml";
}
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0">Transactions List</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Transactions</a></li>
                    <li class="breadcrumb-item active">All Payment Details</li>
                </ol>
            </div>

        </div>
    </div>
</div>
<!-- end page title -->

<div class="row" id="contactList">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header d-flex align-items-center border-0">
                <h5 class="card-title mb-0 flex-grow-1">All Transactions</h5>
            </div>
            <div class="card-body p-0">
                <div class="card-body">
                    <div id="example_wrapper" class="dataTables_wrapper dt-bootstrap5 no-footer">
                        <div class="col-sm-12">
                            <table id="transactionTable" class="table align-middle table-nowrap">
                                <thead class="table-light text-muted">
                                    <tr>
                                        <th class="sort" data-sort="name" scope="col" style="width: 60px;"></th>
                                        <th class="sort" data-sort="date" scope="col">VendorName</th>
                                        <th class="sort" data-sort="currency_name" scope="col">Date</th>
                                        <th class="sort" data-sort="form_name" scope="col">PaymentMethod</th>
                                        <th class="sort" data-sort="to_name" scope="col">PaymentType</th>
                                        <th class="sort" data-sort="transaction_id" scope="col">CreditDebitAmount</th>
                                        <th class="sort" data-sort="transaction_id" scope="col">PendingAmount</th>
                                        <th class="sort" data-sort="status" scope="col">Status</th>
                                    </tr>
                                </thead>
                                <tbody class="list form-check-all">
                                </tbody>
                            </table>
                            <!--end table-->
                        </div>
                        <div class="noresult" style="display: none">
                            <div class="text-center">
                                <lord-icon src="https://cdn.lordicon.com/msoeawqm.json" trigger="loop" colors="primary:#25a0e2,secondary:#00bd9d" style="width:75px;height:75px">
                                </lord-icon>
                                <h5 class="mt-2">Sorry! No Result Found</h5>
                                <p class="text-muted mb-0">
                                    We've searched more than 150+ transactions We did not find any
                                    transactions for you search.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--end card-->
    </div>
    <!--end col-->
</div>
<!--end row-->
<script src="~/moduls/invoicemasterscript.js"></script>