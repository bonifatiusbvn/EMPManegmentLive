@model IEnumerable<EMPManegment.EntityModels.ViewModels.Invoice.CreditDebitView>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
<div class="card-body p-0">
    <div class="card-body">
        <div class="table-responsive table-card">
            <table class="table align-middle table-nowrap" id="customerTable">
                <thead class="table-light text-muted">
                    <tr>
                        <th class="sort" data-sort="name" scope="col" style="width: 60px;"></th>
                        <th class="sort" data-sort="date" scope="col">VendorName</th>
                        <th class="sort" data-sort="currency_name" scope="col">Date</th>
                        <th class="sort" data-sort="form_name" scope="col">PaymentMethod</th>
                        <th class="sort" data-sort="to_name" scope="col">PaymentType</th>
                        <th class="sort" data-sort="transaction_id" scope="col">CreditDebitAmount</th>
                        <th class="sort" data-sort="transaction_id" scope="col">PendingAmount</th>
                        <th class="sort" data-sort="status" scope="col">Status</th>
                    </tr>
                    <!--end tr-->
                </thead>
                <tbody class="list form-check-all">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="id" style="display:none;"><a href="javascript:void(0);" class="fw-medium link-primary">#VZ001</a></td>
                            <td>
                                <div class="avatar-xs">
                                    <div class="avatar-title bg-danger-subtle text-danger rounded-circle fs-16">
                                        <i class="ri-arrow-right-up-fill"></i>
                                    </div>
                                </div>
                            </td>
                            <td class="date">@item.VendorName<small class="text-muted"></small></td>
                            <td class="form_name">@item.Date</td>
                            <td class="to_name">@item.PaymentMethodName</td>
                            <td class="to_name">@item.PaymentTypeName</td>
                            <td class="to_name text-success">@item.CreditDebitAmount</td>
                            <td class="to_name text-danger">@item.PendingAmount</td>
                            <td class="status">
                                <span class="badge bg-primary-subtle text-primary fs-11"><i class="ri-time-line align-bottom"></i> Processing</span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <!--end table-->
            <div class="noresult" style="display: none">
                <div class="text-center">
                    <lord-icon src="https://cdn.lordicon.com/msoeawqm.json" trigger="loop" colors="primary:#25a0e2,secondary:#00bd9d" style="width:75px;height:75px">
                    </lord-icon>
                    <h5 class="mt-2">Sorry! No Result Found</h5>
                    <p class="text-muted mb-0">
                        We've searched more than 150+ transactions We did not find any
                        transactions for you search.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div><!-- end cardbody -->
<script src="~/moduls/invoicemasterscript.js"></script>