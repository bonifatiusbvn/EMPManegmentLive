@model List<EMPManegment.EntityModels.ViewModels.OrderModels.PurchaseOrderDetailView>
@using EMPManegment.Web.Models;
 @inject IHttpContextAccessor Accessor;
@inject UserSession _userSession

@{
    ViewData["Title"] = "DisplayInvoiceDetails";
    Layout = "~/Views/Shared/_UserHomeLayout.cshtml";
}

<link rel="stylesheet" href="~/assets/libs/dropzone/dropzone.css" type="text/css" />
<link rel="shortcut icon" href="~/assets/images/favicon.ico">

@{
    var firstItem = Model.FirstOrDefault();
    decimal? totalAmount = 0;
    decimal? totalGst = 0;
}
@foreach (var item in Model)
{
    totalAmount += item.TotalAmount;
    totalGst += item.PerUnitWithGstprice;
}

<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0">Invoice Details</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Invoices</a></li>
                    <li class="breadcrumb-item active">Invoice Details</li>
                </ol>
            </div>

        </div>
    </div>
</div>
<!-- end page title -->

<div class="row justify-content-center" id="printableContent">
    <div class="col-xxl-9">
        <div class="card" id="demo">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card-header border-bottom-dashed p-4">
                        <div class="d-flex">
                            <div class="flex-grow-1">
                                <img src="~/assets/images/logo - bonifatius.jpeg" class="card-logo card-logo-dark user-profile-image img-fluid" alt="logo dark" style="width:250px;">
                                <div class="mt-sm-5 mt-4">
                                    <h6 class="text-muted text-uppercase fw-semibold">Address</h6>
                                    <h6><span class="text-muted fw-normal">Bonifatius Technologies Pvt. Ltd.</span></h6>
                                    <h6><span class="text-muted fw-normal">SF- 203, Peridot Complex, Urmi co-Operative scoiety Akota,</span></h6>
                                    <h6><span class="text-muted fw-normal">Vadodara,Gujarat 390020</span></h6>
                                </div>
                            </div>
                            <div class="flex-shrink-0 mt-sm-0 mt-3">
                                <h6><span class="text-muted fw-normal">Legal Registration No:</span><span>987654</span></h6>
                                <h6><span class="text-muted fw-normal">Email:</span><span>bonifatius@gmail.com</span></h6>
                                <h6 class="mb-0"><span class="text-muted fw-normal">Contact No: </span><span> +(91) 64 234 6789</span></h6>
                            </div>
                        </div>
                    </div>
                    <!--end card-header-->
                </div><!--end col-->
                <div class="col-lg-12">
                    <div class="card-body p-4">
                        <div class="row g-3">
                            @if (firstItem != null)
                            {
                                <input type="hidden" class="form-control" id="txtuserid" value="@_userSession.UserId" style="border:hidden;" />
                                <input type="hidden" class="form-control" id="txtprojectid" value="@UserSession.ProjectId" style="border:hidden;" />
                                <div class="col-lg-3 col-6">
                                    <p class="text-muted mb-2 text-uppercase fw-semibold">Invoice No</p>
                                    <h5 class="fs-14 mb-0" id="txtinvoiceid">@firstItem.InvoiceNo</h5>
                                </div>
                                <!--end col-->
                                <div class="col-lg-3 col-6">
                                    <p class="text-muted mb-2 text-uppercase fw-semibold">Date</p>
                                    <h5 class="fs-14 mb-0" id="txtdate">@firstItem.OrderDate.ToString("dd/MM/yyyy")</h5>
                                    <h5 class="fs-14 mb-0" id="txtinvoicetype" hidden>@firstItem.Type</h5>
                                    <h5 class="fs-14 mb-0" id="txtorderid" hidden>@firstItem.OrderId</h5>
                                </div>
                                <!--end col-->
                                <div class="col-lg-3 col-6">
                                    <p class="text-muted mb-2 text-uppercase fw-semibold">Payment Status</p>
                                    <span class="badge bg-success-subtle text-success fs-11" id="txtpaymentstatus">@firstItem.PaymentStatus</span>
                                </div>
                                <!--end col-->
                                <div class="col-lg-3 col-6">
                                    <p class="text-muted mb-2 text-uppercase fw-semibold">Total Amount</p>
                                    <h5 class="fs-14 mb-0">₹<span id="txttotalamount">@totalAmount</span></h5>
                                    <h5 class="fs-14 mb-0" hidden>₹<span id="txttotalgst">@totalGst</span></h5>
                                </div>
                                <!--end col-->
                            }
                        </div>
                        <!--end row-->
                    </div>
                    <!--end card-body-->
                </div><!--end col-->
                <div class="col-lg-12">
                    <div class="card-body p-4 border-top border-top-dashed">
                        @if (firstItem != null)
                        {
                            <div class="row g-3">
                                <div class="col-6">
                                    <h6 class="text-muted text-uppercase fw-semibold mb-3">Billing Address</h6>
                                    <p class="fw-medium mb-2" id="txtcompanyname">@firstItem.CompanyName</p>
                                    <p class="fw-medium mb-2" id="txtvendorid" hidden>@firstItem.VendorId</p>
                                    <p class="text-muted mb-1" id="txtaddress">@firstItem.VendorAddress</p>
                                    <p class="text-muted mb-1"><span>Email: </span><span id="txtemail">@firstItem.VendorEmail</span></p>
                                    <p class="text-muted mb-1"><span>Phone: +</span><span id="txtcontect">@firstItem.VendorContact</span></p>
                                </div>
                                <!--end col-->
                                <div class="col-6">
                                    <h6 class="text-muted text-uppercase fw-semibold mb-3">Shipping Address</h6>
                                    <p class="fw-medium mb-2" id="txtshippingcompany">@firstItem.CompanyName</p>
                                    <p class="text-muted mb-1" id="txtshippingaddress">@firstItem.VendorAddress</p>
                                    <p class="text-muted mb-1"><span>Email: </span><span id="txtshippingemail">@firstItem.VendorEmail</span></p>
                                    <p class="text-muted mb-1"><span>Phone: +</span><span id="txtshippingcontect">@firstItem.VendorContact</span></p>
                                </div>
                                <!--end col-->
                            </div>
                            <!--end row-->
                        }
                    </div>
                    <!--end card-body-->
                </div><!--end col-->
                <div class="col-lg-12">
                    <div class="card-body p-4">
                        <div class="table-responsive">
                            <table class="table table-borderless text-center table-nowrap align-middle mb-0">
                                <thead>
                                    <tr class="table-active">
                                        <th scope="col">#</th>
                                        <th scope="col">Product Details</th>
                                        <th scope="col">Rate</th>
                                        <th scope="col">Quantity</th>
                                        <th scope="col">RateWithGst</th>
                                        <th scope="col" class="text-end">Amount</th>
                                    </tr>
                                </thead>
                                <tbody id="products-list">
                                    @foreach (var item in Model)
                                    {
                                        <tr class="product">
                                            <td>@(Model.IndexOf(item) + 1)</td>
                                            <td class="text-start">
                                                <span class="fw-medium" id="txtproductname">@item.ProductName</span>
                                                <span class="fw-medium" id="txtproductid" hidden>@item.ProductId</span>
                                                <p class="text-muted mb-0" id="txtdescription">@item.ProductShortDescription</p>
                                            </td>
                                            <td id="txtperunitprice">@item.PerUnitPrice</td>
                                            <td id="txtquantity">@item.Quantity</td>
                                            <td id="txtperunitwithgstprice">@item.PerUnitWithGstprice</td>
                                            <td class="text-end" id="txttotal">@item.TotalAmount</td>
                                        </tr>
                                    }
                                </tbody>
                            </table><!--end table-->
                        </div>
                        <div class="border-top border-top-dashed mt-2">
                            <table class="table table-borderless table-nowrap align-middle mb-0 ms-auto" style="width:250px">
                                <tbody>
                                    <tr class="border-top border-top-dashed fs-15">
                                        <th scope="row">Total Amount</th>
                                        <th class="text-end" id="InsertInvoiceDetails">₹@totalAmount</th>
                                    </tr>
                                </tbody>
                            </table>
                            <!--end table-->
                        </div>
                        <div class="mt-3">
                            @if (firstItem != null)
                            {
                                <h6 class="text-muted text-uppercase fw-semibold mb-3">Payment Details:</h6>
                                <p class="text-muted mb-1">Payment Method: <span class="fw-medium">@firstItem.PaymentMethodName</span></p>
                                <p class="text-muted mb-1">Card Holder: <span class="fw-medium" id="card-holder-name">@firstItem.CompanyName</span></p>
                                <p class="text-muted mb-1">Card Number: <span class="fw-medium" id="card-number">xxx xxxx xxxx 1234</span></p>
                                <p class="text-muted">Total Amount: <span class="fw-medium" id="">₹ </span><span id="card-total-amount">@totalAmount</span></p>
                            }
                        </div>
                        <div class="mt-4">
                            <div class="alert alert-primary">
                                <p class="mb-0">
                                    <span class="fw-semibold">NOTES:</span>
                                    <span id="note">
                                        All accounts are to be paid within 7 days from receipt of invoice. To be paid by cheque or
                                        credit card or direct payment online. If account is not paid within 7
                                        days the credits details supplied as confirmation of work undertaken
                                        will be charged the agreed quoted fee noted above.
                                    </span>
                                </p>
                            </div>
                        </div>
                        <div class="hstack gap-2 justify-content-end d-print-none mt-4">
                            <a href="javascript:window.print()" class="btn btn-soft-primary"><i class="ri-printer-line align-bottom me-1"></i> Print</a>
                        </div>
                    </div>
                    <!--end card-body-->
                </div><!--end col-->
            </div><!--end row-->
        </div>
        <!--end card-->
    </div>
    <!--end col-->
</div>
<!--end row-->
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/assets/js/pages/invoicedetails.js"></script>



