            </div>
            <div class="card-body p-0">
                <div class="tab-content text-muted">
                    <div class="tab-pane active" id="cryptoBuy" role="tabpanel">
                        <div class="p-3 bg-primary-subtle">
                            <div class="float-end ms-2">
                                <h6 class="text-primary mb-0" id="pendingamount"></h6>
                            </div>
                            <h6 class="mb-0">Pending Amount</h6>
                        </div>
                        <div class="p-3">
                            <div class="row">
                                <div class="col-6">
                                    <div class="mb-3">
                                        <label>Payment Type :</label>
                                        <select class="form-select" id="paymenttype">
                                            <option selected disabled value=""></option>
                                        </select>
                                        <input type="hidden" class="text-muted text-uppercase fw-semibold" id="paymenttypeid">
                                    </div>
                                </div><!-- end col -->
                                <div class="col-6">
                                    <div class="mb-3">
                                        <label>Payment Method :</label>
                                        <select class="form-select" id="txtpaymentmethod">
                                            <option selected disabled value=""></option>
                                        </select>
                                        <input type="hidden" class="text-muted text-uppercase fw-semibold" id="txtpaymentmethodid">
                                    </div>
                                </div><!-- end col -->
                            </div><!-- end row -->
                            <div>
                                <div class="input-group mb-3">
                                    <label class="input-group-text" for="txtcreditdebitamount">Amount</label>
                                    <input type="text" class="form-control" id="txtcreditdebitamount">
                                    <span id="warningMessage" style="color: red;"></span>
                                </div>

                                <div class="input-group mb-3">
                                    <label class="input-group-text">Pending Amount</label>
                                    <input type="text" class="form-control" id="txtpendingamount">
                                    <label class="input-group-text">$</label>
                                </div>

                                <div class="input-group mb-0">
                                    <label class="input-group-text">Total Amount</label>
                                    <input type="text" class="form-control" id="txttotalamount" value="@TotalAmount">
                                    <input type="hidden" class="form-control" id="txtuserid" value="@_userSession.UserId" style="border:hidden;" />
                                </div>
                            </div>
                            <div class="mt-3 pt-2">
                                <div class="d-flex mb-2">
                                    <div class="flex-grow-1">
                                        <p class="fs-13 mb-0">Transaction Fees<span class="text-muted ms-1 fs-11">(0.05%)</span></p>
                                    </div>
                                    <div class="flex-shrink-0">
                                        <h6 class="mb-0">$1.08</h6>
                                    </div>
                                </div>
                                <div class="d-flex mb-2">
                                    <div class="flex-grow-1">
                                        <p class="fs-13 mb-0">Minimum Received<span class="text-muted ms-1 fs-11">(2%)</span></p>
                                    </div>
                                    <div class="flex-shrink-0">
                                        <h6 class="mb-0">$7.85</h6>
                                    </div>
                                </div>
                                <div class="d-flex">
                                    <div class="flex-grow-1">
                                        <p class="fs-13 mb-0">Estimated Rate</p>
                                    </div>
                                    <div class="flex-shrink-0">
                                        <h6 class="mb-0">1 BTC ~ $46982.70</h6>
                                    </div>
                                </div>
                            </div>
                            <div class="mt-3 pt-2">
                                <button type="button" class="btn btn-primary w-100" id="creditdebitsubmitbtn" onclick="InsertCreditDebitDetails()">Buy Coin</button>
                            </div>
                        </div>
                    </div>
                    <!--end tab-pane-->
                    <!--end tab-pane-->
                </div>
            </div>
        </div>
    </div>
    <!--end col-->
</div>
