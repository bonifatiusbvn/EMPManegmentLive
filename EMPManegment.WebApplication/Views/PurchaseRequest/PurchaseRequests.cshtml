@using EMPManegment.Web.Models;
@inject IHttpContextAccessor Accessor;
@inject UserSession _userSession
@{
    ViewData["Title"] = "PurchaseRequestList";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<div class="row" style="margin-top:80px;">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0">Purchase Request List</h4>
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Purchase Request</a></li>
                    <li class="breadcrumb-item active">Purchase Requests</li>
                </ol>
            </div>

        </div>
    </div>
</div>
<!-- end page title -->
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card" id="orderList">
                <div class="card-header ">
                    <div class="row align-items-center gy-3">
                        <div class="col-sm">
                            <h5 class="card-title mb-0">Purchase Request</h5>
                            <input hidden id="txtProjectId" type="text" value="@UserSession.ProjectId" />
                        </div>
                        @if (UserSession.FormPermisionData.Any(a => a.FormName == "Create Purchase Request" && (a.Add == true)))
                        {
                            <div class="col-sm-auto">
                                <div class="d-flex gap-1 flex-wrap">
                                    <button class="btn btn-success" id="prApproveBtn" onclick="ApproveUnapprovePR();" style="display:none;">Approve</button>
                                    <button class="btn btn-info add-btn btn-md" id="create-btn" onclick="createPR()"><i class="ri-add-line align-bottom me-1"></i>Purchase Request</button>
                                    @*     <button class="btn btn-soft-danger" id="remove-actions" style="display:none;"><i class="ri-delete-bin-2-line"></i></button>*@
                                </div>
                            </div>
                        }
                    </div>
                </div>
                <div class="card-body">
                    <div id="example_wrapper" class="dataTables_wrapper dt-bootstrap5 no-footer">
                        <div class="col-sm-12">
                            <table id="PRListTable" class="table table-bordered dt-responsive nowrap table-striped align-middle dataTable no-footer dtr-inline text-center" style="width: 100%;" aria-describedby="tasksTableData_info">
                                <thead class="btn-info text-center">
                                    <tr class="text-uppercase">
                                        <th class="text-center">PRNo</th>
                                        <th class="text-center">UserName</th>
                                        <th class="text-center">ProjectName</th>
                                        <th class="text-center">ProductName</th>
                                        <th class="text-center">Quantity</th>
                                        <th class="text-center">
                                            <input class="form-check-input" type="checkbox" id="checkedAll">Approve
                                        </th>
                                        @if (UserSession.FormPermisionData.Any(a => a.FormName == "Purchase Request List" && (a.Edit == true || a.Delete == true)))
                                        {
                                            <th class="text-center">Action</th>
                                        }
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                            <div class="noresult" style="display: none">
                                <div class="text-center">
                                    <lord-icon src="https://cdn.lordicon.com/msoeawqm.json" trigger="loop" colors="primary:#25a0e2,secondary:#00bd9d" style="width:75px;height:75px">
                                    </lord-icon>
                                    <h5 class="mt-2">Sorry! No Result Found</h5>
                                    <p class="text-muted mb-0">
                                        We've searched more than 150+ invoices We did not find any
                                        invoices for you search.
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="tab-content text-muted">
                                    <div class="tab-pane fade show active" id="project-overview" role="tabpanel">
                                    </div>
                                </div>
                                @* <div id="UpdatePR"></div> *@
                            </div>
                            <!--end col-->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<script src="~/lib/jquery/dist/jquery.min.js"></script>

<script type="text/javascript">
    var userPermissions = '@Html.Raw(Json.Serialize(UserSession.FormPermisionData))';

    function updateCheckedAllState() {
        var allChecked = $('input[name="chk_child"]').length === $('input[name="chk_child"]:checked').length;
        $('#checkedAll').prop('checked', allChecked);
    }

    function anyCheckboxChecked() {
        return $("input[name='chk_child']:checked").length > 0;
    }

    $('#PRListTable').on('change', 'input[name="chk_child"]', function () {
        if (anyCheckboxChecked()) {
            $('#prApproveBtn').show();
        } else {
            $('#prApproveBtn').hide();
        }
        updateCheckedAllState();
    });

    $('#checkedAll').on('change', function () {
        var checked = $(this).prop('checked');
        $('input[name="chk_child"]').prop('checked', checked);
        if (checked) {
            $('#prApproveBtn').show();
        } else {
            $('#prApproveBtn').hide();
        }
    });
</script>

<script src="~/moduls/purchaserequestscript.js" asp-append-version="true"></script>