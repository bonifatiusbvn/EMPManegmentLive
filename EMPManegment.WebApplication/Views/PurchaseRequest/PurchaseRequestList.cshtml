@using EMPManegment.Web.Models;
@inject IHttpContextAccessor Accessor;
@inject UserSession _userSession
@{
    ViewData["Title"] = "PurchaseRequestList";
    Layout = "~/Views/Shared/_UserHomeLayout.cshtml";
}

<div class="row" style="margin-top:80px;">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0">Purchase Request</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Ecommerce</a></li>
                    <li class="breadcrumb-item active">Purchase Request</li>
                </ol>
            </div>

        </div>
    </div>
</div>
<!-- end page title -->
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card" id="orderList">
                <div class="card-header border-0">
                    <div class="row align-items-center gy-3">
                        <div class="col-sm">
                            <h5 class="card-title mb-0">Order History</h5>
                        </div>
                        <div class="col-sm-auto">
                            <div class="d-flex gap-1 flex-wrap">
                                <a class="btn btn-primary add-btn" id="create-btn" asp-action="CreatePurchaseRequestView" asp-controller="PurchaseRequestMaster"><i class="ri-add-line align-bottom me-1"></i> Create PR</a>
                                <button type="button" class="btn btn-info"><i class="ri-file-download-line align-bottom me-1"></i> Import</button>
                                <button class="btn btn-soft-danger" id="remove-actions" onClick="deleteMultiple()"><i class="ri-delete-bin-2-line"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body border border-dashed border-end-0 border-start-0">
                </div>
                <div class="modal fade" id="UpdateOrderModel" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header bg-light p-3">
                                <h5 class="modal-title" id="exampleModalLabel"> Purchase Request Details</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" id="close-modal"></button>
                            </div>
                            <form class="tablelist-form" autocomplete="off" id="UpdatePurchaseRequestDetailsForm">
                                <div class="modal-body">
                                    <div class="mb-3">
                                        <label for="date-field" class="form-label">PrId</label>
                                        <input type="text" id="txtPrId" name="txtPrId" class="form-control" />
                                    </div>

                                    <div class="mb-3">
                                        <label for="date-field" class="form-label">UserId</label>
                                        <input type="text" id="txtusername" name="txtusername" class="form-control" />
                                    </div>

                                    <div class="mb-3">
                                        <label for="customername-field" class="form-label">ProjectId</label>
                                        <input type="text" id="txtprojectId" name="txtProjectId" class="form-control" placeholder="Enter ProjectId" />
                                    </div>

                                    <div class="mb-3">
                                        <label for="customername-field" class="form-label">ProductId</label>
                                        <input type="text" id="txtProductId" name="txtProductId" class="form-control" placeholder="Enter ProductId" />
                                    </div>

                                    <div class="mb-3">
                                        <label for="customername-field" class="form-label">ProductName</label>
                                        <input type="text" id="txtproductName" name="txtproductName" class="form-control" placeholder="Enter ProductName" />
                                    </div>

                                    <div class="mb-3">
                                        <label for="customername-field" class="form-label">ProductTypeId</label>
                                        <input type="text" id="txtProductTypeId" name="txtProductTypeId" class="form-control" placeholder="Enter ProductTypeId" />
                                    </div>

                                    <div class="row gy-4 mb-3">
                                        <div class="col-md-6">
                                            <div>
                                                <label for="amount-field" class="form-label">Quantity</label>
                                                <input type="text" id="txtquantity" name="txtquantity" class="form-control" placeholder="Total Quantity" />
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-6">
                                        <label class="form-label">IsApproved</label>
                                        <div class="form-check form-switch mb-3">
                                            <input type="checkbox" class="form-check-input font-22" id="txtIsApproved" name="txtIsApproved" style="margin-left:-35px;" disabled>
                                        </div>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <div class="hstack gap-2 justify-content-end">
                                        <button type="button" class="btn btn-danger btn-default m-1" id="close-modal" data-bs-dismiss="modal">Close</button>
                                        <button type="button" class="btn btn-success" onclick="UpdatePurchaseRequestDetails()" id="updatereqbtn">Update</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="tab-content text-muted">
                            <div class="tab-pane fade show active" id="project-overview" role="tabpanel">
                                <div class="tab-pane" id="status-all" role="tabpanel">
                                    <div class="table-responsive table-card mb-1">
                                        <table class="table table-nowrap align-middle" id="orderTable">
                                            <thead class="text-muted table-light">
                                                <tr class="text-uppercase">
                                                    <th scope="col" style="width: 25px;">
                                                    </th>
                                                    <th class="sort" data-sort="user_name">UserName</th>
                                                    <th class="sort" data-sort="project_name">ProjectName</th>
                                                    <th class="sort" data-sort="product_name">ProductName</th>
                                                    <th class="sort" data-sort="quantity">Quantity</th>
                                                    <th class="sort" data-sort="isApproved">IsApproved</th>
                                                    <th class="sort" data-sort="city">Action</th>
                                                </tr>
                                            </thead>
                                            <tbody id="addNewlink">
                                            </tbody>
                                        </table>
                                        <div class="noresult" style="display: none">
                                            <div class="text-center">
                                                <lord-icon src="https://cdn.lordicon.com/msoeawqm.json" trigger="loop" colors="primary:#25a0e2,secondary:#0ab39c" style="width:75px;height:75px">
                                                </lord-icon>
                                                <h5 class="mt-2">Sorry! No Result Found</h5>
                                                <p class="text-muted">
                                                    We've searched more than 150+ Orders We did
                                                    not find any
                                                    orders for you search.
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="d-flex justify-content-end">
                                        <div class="pagination-wrap hstack gap-2">
                                            <a class="page-item pagination-prev disabled" href="#">
                                                Previous
                                            </a>
                                            <ul class="pagination listjs-pagination mb-0"></ul>
                                            <a class="page-item pagination-next" href="#">
                                                Next
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                    <!--end col-->
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/moduls/purchaserequestscript.js"></script>
