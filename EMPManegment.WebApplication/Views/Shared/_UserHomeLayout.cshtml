                                            <p>User List</p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a asp-action="UserActiveDecative" asp-controller="UserProfile" class="nav-link">
                                            <i class="far fa-circle nav-icon"></i>
                                            <p>ActiveDeactive</p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a asp-action="GetUsersListById" asp-controller="UserProfile" class="nav-link">
                                            <i class="far fa-circle nav-icon"></i>
                                            <p>GetUserAttendance</p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a asp-action="RolewisePermission" asp-controller="UserProfile" class="nav-link">
                                            <i class="far fa-circle nav-icon"></i>
                                            <p>RolewiseFormPermission</p>
                                        </a>
                                    </li>
                                }
                            </ul>
                        </li>
