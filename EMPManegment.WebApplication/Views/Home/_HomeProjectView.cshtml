@model IEnumerable<EMPManegment.EntityModels.ViewModels.ProjectModels.ProjectDetailView>
@using EMPManegment.Web.Models
@using X.PagedList;
@using X.PagedList.Mvc.Core;
@inject IHttpContextAccessor Accessor
@inject UserSession _userSession
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
<style>
    span.deleteicon {
        position: relative;
        display: inline-flex;
        align-items: center;
    }

        span.deleteicon span {
            position: absolute;
            display: block;
            right: 3px;
            width: 15px;
            height: 15px;
            border-radius: 50%;
            color: red;
            background-color: #ccc;
            font: 13px monospace;
            text-align: center;
            line-height: 1em;
            cursor: pointer;
        }

        span.deleteicon input {
            padding-right: 18px;
            box-sizing: border-box;
        }
</style>


<!-- ... your existing form content ... -->

<div class="row g-4 mb-3">
    <div class="col-sm-auto">
        <a id="backButton" class="btn btn-outline-success rounded"><i class="ri-arrow-left-line m-2"></i>Back</a>
    </div>

    <div class="col-sm offset-6">
        <form class="mx-2 my-2">
            <div class="input-group">
                <select class="form-control form-select valid" id="inputSearch" name="searchby">
                    <option selected disabled value="">SearchBy...</option>
                    <option value="ProjectTitle">ProjectTitle</option>
                    <option value="ProjectStatus">ProjectStatus</option>
                </select>
                <span class="deleteicon col-sm offset-6">
                    <input name="searchfor" class="form-control" id="inputsearch" area-describedby="inputSearchProjectTitle" aria-label="Search" autocomplete="off" />
                    <span onclick="var input = this.previousElementSibling; input.value = ''; input.focus();" style="margin-top:0px;margin-left:-24px;position:relative;">x</span>
                </span>
                <button type="button" class="btn btn-outline-secondary rounded" onclick="serrchproject()">Search</button>
            </div>
        </form>

    </div>
</div><!-- end row -->
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-xxl-3 col-sm-4 project-card border">

            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">@item.ProjectTitle</h3>
                    <div class="card-tools">
                        <a class="dropdown-item" href="/Project/GetProjectDetails/?Id=@item.ProjectId">
                            <i class="fas fa-eye"></i>
                        </a>
                    </div>
                </div>
                <!-- /.card-header -->
                <div class="card-body p-0">
                    <ul class="products-list product-list-in-card pl-2 pr-2">
                        <li class="item">
                            <div class="product-img">
                                <img src="~/assets/images/brands/mail_chimp.png" alt="" class="direct-chat-img">

                            </div>
                            <div class="product-info">
                                <p>
                                    @item.ProjectDescription

                                    @if (item.ProjectStatus == "Inprogress")
                                    {
                                        <div class="badge bg-warning-subtle text-warning fs-12">@item.ProjectStatus</div>
                                    }
                                    else
                                    {
                                        <div class="badge bg-success-subtle text-success fs-12">@item.ProjectStatus</div>
                                    }

                                </p>
                                <span class="product-description">
                                    Deadline  <h5 class="fs-14">@item.ProjectDeadline.ToString("dd/MM/yyyy")</h5>

                                </span>
                            </div>
                        </li>

                    </ul>
                </div>
                <!-- /.card-body -->
                <div class="card-footer text-center">
                    <img src="~/@UserSession.ProfilePhoto" alt="" class="direct-chat-img">
                </div>
                <!-- /.card-footer -->
            </div>
        </div>
    }
</div>


@Html.PagedListPager((IPagedList)Model, page => Url.Action("GetHomeProjectListPartial", new
    {
        page = page,
        searchfor = @Context.Request.Query["searchfor"],
        searchby = @Context.Request.Query["searchby"]
    }),
    new X.PagedList.Web.Common.PagedListRenderOptions
{
    LiElementClasses = new string[] { "page-item" },
    PageClasses = new string[] { "page-link" }
})



