@model IEnumerable<EMPManegment.EntityModels.ViewModels.ProjectModels.ProjectDetailView>
@using EMPManegment.Web.Models
@using X.PagedList;
@using X.PagedList.Mvc.Core;
@inject IHttpContextAccessor Accessor
@inject UserSession _userSession
@inject EMPManegment.Web.Helper.Common CommonHelper
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
<style>
    span.deleteicon {
        position: relative;
        display: inline-flex;
        align-items: center;
    }

        span.deleteicon span {
            position: absolute;
            display: block;
            right: 3px;
            width: 15px;
            height: 15px;
            border-radius: 50%;
            color: red;
            background-color: #ccc;
            font: 13px monospace;
            text-align: center;
            line-height: 1em;
            cursor: pointer;
        }

        span.deleteicon input {
            padding-right: 18px;
            box-sizing: border-box;
        }
</style>


<!-- ... your existing form content ... -->

<div class="row g-4 mb-3">
    <div class="col-sm-auto">
        <a id="backButton" class="btn btn-outline-success rounded"><i class="ri-arrow-left-line m-2"></i>Back</a>
    </div>
    @{
        var profilePhoto = UserSession.ProfilePhoto;
        var fullName = _userSession.FullName;
        var firstNameInitial = !string.IsNullOrEmpty(_userSession.FirstName) ? _userSession.FirstName[0].ToString() : string.Empty;
        var lastNameInitial = !string.IsNullOrEmpty(_userSession.LastName) ? _userSession.LastName[0].ToString() : string.Empty;
        var initials = (firstNameInitial + lastNameInitial).ToUpper();
        var defaultImagePath = "~/content/image/image-b2.jpg";
    }
    <div class="col-sm offset-6">
        <form class="mx-2 my-2">
            <div class="input-group">
                <select class="form-control form-select valid" id="inputSearch" name="searchby">
                    <option selected disabled value="">SearchBy...</option>
                    <option value="ProjectTitle">ProjectTitle</option>
                    <option value="ProjectStatus">ProjectStatus</option>
                </select>
                <span class="deleteicon col-sm offset-6">
                    <input name="searchfor" class="form-control" id="inputsearch" area-describedby="inputSearchProjectTitle" aria-label="Search" autocomplete="off" />
                    <span onclick="var input = this.previousElementSibling; input.value = ''; input.focus();" style="margin-top:0px;margin-left:-24px;position:relative;">x</span>
                </span>
                <button type="button" class="btn btn-outline-secondary rounded" onclick="serrchproject()">Search</button>
            </div>
        </form>
    </div>
</div><!-- end row -->

<div class="row">
    @foreach (var item in Model)
    {
        var CompanyName = item.ProjectTitle;
        var Titleinitial = string.Empty;
        var words = CompanyName.Split(new[] { ' ' }, StringSplitOptions.RemoveEmptyEntries);
        if (words.Length > 0)
        {
            Titleinitial += char.ToUpper(words[0][0]);

            if (words.Length > 1)
            {
                Titleinitial += char.ToUpper(words[1][0]);
            }
        }
        var CompanyInitials = Titleinitial.ToUpper();

        <div class="col-xxl-3 col-sm-4 project-card" onclick="window.location.href='/Project/ProjectDetails/?Id=@item.ProjectId'">
            <div class="card border rounded-top">
                <div class="card-body">
                    <div class="p-3 mt-n3 mx-n3 bg-info-subtle rounded-top">
                        <div class="d-flex align-items-center">
                            <div class="flex-grow-1">
                                <h5 class="mb-0 fs-16" style="font-weight:bold;">@item.ProjectTitle</h5>(@item.ShortName)
                            </div>
                        </div>
                    </div>
                    <div class="card-body p-0">
                        <ul class="products-list product-list-in-card pl-2 pr-2">
                            <li class="item d-flex align-items-center">
                                @if (!string.IsNullOrEmpty(@item.ProjectImage))
                                {
                                    <div class="avatar-sm mr-2">
                                        <span class="avatar-title bg-warning-subtle rounded p-2">
                                            <img src="~/Content/Projects/@item.ProjectImage" alt="" class="img-fluid p-1">
                                        </span>
                                    </div>
                                }
                                else
                                {
                                    <div class="avatar-sm mr-2">
                                        <div class="avatar-title bg-warning-subtle">
                                            <span class="rounded-circle bg-info-subtle p-2 text-success fs-13">
                                                @CompanyInitials
                                            </span>
                                        </div>
                                    </div>
                                }
                                <div class="product-info flex-grow-1">
                                    <p>
                                        @item.ProjectDescription
                                    </p>
                                    <div>
                                        @if (item.ProjectStatus == "Inprogress")
                                        {
                                            <span class="badge bg-warning-subtle text-warning fs-12">@item.ProjectStatus</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success-subtle text-success fs-12">@item.ProjectStatus</span>
                                        }
                                    </div>
                                </div>
                            </li>
                        </ul>
                        <span class="product-description">
                            Deadline <h5 class="fs-14">@CommonHelper.GetCommonDateFormat(item.ProjectDeadline)</h5>
                        </span>
                    </div>

                    <div class="card-footer bg-transparent border-top-dashed py-2">
                        <div class="d-flex align-items-center">
                            <div class="flex-grow-1">
                                <div class="avatar-group">
                                    <a href="javascript: void(0);" class="avatar-group-item" data-bs-toggle="tooltip" data-bs-trigger="hover" data-bs-placement="top" title="Jeffrey Salazar">
                                        <div class="avatar-xxs">
                                            @if (!string.IsNullOrEmpty(profilePhoto) && !profilePhoto.Equals(defaultImagePath, StringComparison.OrdinalIgnoreCase))
                                            {
                                                <img src="~/@profilePhoto" style="margin-right: 430px;height:40px;width:40px;" alt="message user image" class="img-circle">
                                            }
                                            else
                                            {
                                                <div class="flex-shrink-0 avatar-xs me-2">
                                                    <div class="avatar-title bg-success-subtle text-success rounded-circle fs-13" style="margin-right: 430px;height:40px;width:40px;">@initials</div>
                                                </div>
                                            }
                                        </div>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- end card body -->
        </div>
        <!-- end card -->
    }
    <!-- end col -->
</div>




@Html.PagedListPager((IPagedList)Model, page => Url.Action("GetHomeProjectListPartial", new
    {
        page = page,
        searchfor = @Context.Request.Query["searchfor"],
        searchby = @Context.Request.Query["searchby"]
    }),
                                                    new X.PagedList.Web.Common.PagedListRenderOptions
                                                {
                                                    LiElementClasses = new string[] { "page-item" },
                                                    PageClasses = new string[] { "page-link" }
                                                }
                                            )
