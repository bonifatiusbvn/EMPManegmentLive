@using EMPManegment.Web.Models
@model IEnumerable<EMPManegment.EntityModels.ViewModels.Invoice.InvoiceViewModel>
@inject UserSession _userSession
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

@foreach (var item in Model)
{
    <div class="acitivity-item py-3 d-flex">
        <div class="flex-shrink-0">
            <img src="~/@item.UserImage" alt="" class="avatar-xs rounded-circle acitivity-avatar" />
        </div>
        <div class="flex-grow-1 ms-3">
            <h6 class="mb-1">@item.UserName</h6>
            <p class="text-muted mb-2">Create Invoice @item.InvoiceNo</p>
            <small class="mb-0 text-muted">@item.CreatedOn</small>
        </div>
    </div>
    <div class="acitivity-item py-3 d-flex">
        <div class="flex-shrink-0">
            <div class="avatar-xs acitivity-avatar">
                <div class="avatar-title rounded-circle bg-primary-subtle text-primary">
                    <i class="ri-shopping-bag-line"></i>
                </div>
            </div>
        </div>
        <div class="flex-grow-1 ms-3">
            <h6 class="mb-1">Your order is placed <span class="badge bg-danger-subtle text-danger align-middle ms-1">@item.Status</span></h6>
            <p class="text-muted mb-2">@item.ShippingAddress</p>
            <small class="mb-0 text-muted">@item.InvoiceDate</small>
        </div>
    </div>

}

