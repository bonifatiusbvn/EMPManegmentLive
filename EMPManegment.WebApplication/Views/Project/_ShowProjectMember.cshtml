@model List<EMPManegment.EntityModels.ViewModels.ProjectModels.ProjectView>

@if (Model.Count > 0)
{
    foreach (var item in Model)
    {
        <div style="height: 40px;" class="mx-n3 px-3">
            <div class="vstack gap-3">
                <div class="d-flex align-items-center">
                    <div class="avatar-xs flex-shrink-0 me-3">
                        <img src="~/@item.Image" alt="" class="img-fluid rounded-circle">
                        <input type="text" id="projectid" value="@item.ProjectId" hidden />
                    </div>
                    <div class="flex-grow-1">
                        <h5 class="fs-13 mb-0"><a href="#" class="text-body d-block">@item.Fullname</a></h5>
                    </div>
                    <div class="flex-shrink-0">
                        <div class="d-flex align-items-center gap-1">
                            <button type="button" class="btn btn-light btn-sm">Message</button>
                            <a class="btn text-danger d-inline-block remove-item-btn" data-bs-toggle="modal" onclick="deleteProjectMember('@item.UserId')">
                                <i class="ri-delete-bin-5-fill fs-16"></i>
                            </a>
                        </div>
                    </div>
                </div>
                <!-- end member item -->
            </div>
            <!-- end list -->
        </div>
    }
}
<!-- Modal -->
<div class="modal fade flip" id="deleteOrderModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body p-5 text-center">
                <lord-icon src="https://cdn.lordicon.com/gsqxdxog.json" trigger="loop" colors="primary:#25a0e2,secondary:#00bd9d" style="width:90px;height:90px"></lord-icon>
                <div class="mt-4 text-center">
                    <h4>You are about to delete a Member ?</h4>
                    <p class="text-muted fs-15 mb-4">
                        Deleting your project member will remove him form this current Project.
                    </p>
                    <div class="hstack gap-2 justify-content-center remove">
                        <button class="btn btn-link link-primary fw-medium text-decoration-none" id="deleteRecord-close" data-bs-dismiss="modal">
                            <i class="ri-close-line me-1 align-middle"></i>
                            Close
                        </button>
                        <button class="btn btn-primary" id="delete-record">
                            Yes,
                            Delete It
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--end modal -->
