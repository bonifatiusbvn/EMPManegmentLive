@model List<EMPManegment.EntityModels.ViewModels.ProjectModels.ProjectView>

@if (Model.Count > 0)
{
    foreach (var item in Model)
    {
        <div style="height: 40px;" class="mx-n3 px-3">
            <div class="vstack gap-3">
                <div class="d-flex align-items-center">
                    <div class="post">
                        <div class="user-block">
                            <img class="img-circle img-bordered-sm" src="~/@item.Image" alt="user image">
                            <input type="text" id="projectid" value="@item.ProjectId" hidden />
                            <a href="#">@item.Fullname</a>
                            <span class="float-right">
                                <a class="btn text-danger" data-toggle="modal" onclick="deleteProjectMember('@item.UserId')"><i class="fas fa-trash"></i></a>
                            </span>

                        </div>

                        <p>

                        </p>

                        <p>

                        </p>


                    </div>

                </div>
                <!-- end member item -->
            </div>
            <!-- end list -->
        </div>
    }
}
