@model List<EMPManegment.EntityModels.View_Model.EmpDetailsView>

@if (Model.Count > 0)
{
    foreach (var m in Model)
    {
        <div class="mx-n4 px-4" style="height: 40px;">
            <div class="vstack1 gap-3">
                <div class="d-flex align-items-center">
                    <div class="avatar-xs flex-shrink-0 me-3">
                        <img src="~/@m.Image" alt="" class="direct-chat-img">
                    </div>
                    <div class="flex-grow-1">
                        <h5 class="fs-13 mb-0"><a href="#" class="text-body d-block">@m.FirstName @m.LastName</a></h5>
                    </div>
                    <div class="flex-shrink-0">
                        <button type="button" class="btn btn-block bg-gradient-info" onclick="SelectProjectHead(this)">Select</button>
                    </div>
                </div>
                <!-- end member item -->
            </div>
            <!-- end list -->
        </div>
    }
}


