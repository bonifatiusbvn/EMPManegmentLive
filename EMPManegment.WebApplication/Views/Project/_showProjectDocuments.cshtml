@model List<EMPManegment.EntityModels.ViewModels.ProjectModels.ProjectDocumentView>

@if (Model.Count > 0)
{
    foreach (var item in Model)
    {
        <div class="vstack gap-2">
            <div class="border rounded border-dashed p-2">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0 me-3">
                        <div class="avatar-sm">
                            <div class="avatar-title bg-light text-primary rounded fs-24">
                                <i class="fa-regular fa-file-lines"></i>
                            </div>
                        </div>
                    </div>
                    <div class="flex-grow-1 overflow-hidden">
                        <h5 class="fs-13 mb-1"><a href="#" class="text-body text-truncate d-block">@item.DocumentName.Substring(37)</a></h5>
                        @* <div>2.2MB</div>*@
                        <div>@item.FullName</div>
                        <input type="hidden" value="@item.ProjectId" id="txtProjectId" />
                    </div>
                    <div class="flex-shrink-0 ms-2">
                        <div class="d-flex gap-1">
                            <button type="button" class="btn btn-icon text-muted btn-sm fs-18" onclick="DownloadProjectDocument('@item.DocumentName')"><i class="ri-download-2-line"></i></button>
                            <button type="button" class="btn btn-icon text-muted btn-sm fs-18" onclick="deleteProjectDocument('@item.Id')"><i class="ri-delete-bin-fill align-bottom me-2 text-muted"></i></button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
}