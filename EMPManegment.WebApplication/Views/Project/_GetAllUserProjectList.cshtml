@model IEnumerable<EMPManegment.EntityModels.ViewModels.ProjectModels.ProjectDetailView>
@using EMPManegment.Web.Models
@using X.PagedList;
@using X.PagedList.Mvc.Core;
@inject IHttpContextAccessor Accessor
@inject UserSession _userSession
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
<div class="row">

    <!-- start col -->
    @foreach (var item in Model)
    {
        <div class="col-xxl-3 col-sm-4 project-card">
            <div class="card card-height-100">
                <div class="card-body">
                    <div class="p-3 mt-n3 mx-n3 bg-danger-subtle rounded-top">
                        <div class="d-flex align-items-center">
                            <div class="flex-grow-1">
                                <h5 class="mb-0 fs-14"><a href="apps-projects-overview.html" class="text-body">@item.ShortName</a></h5>
                            </div>
                            <div class="flex-shrink-0">
                                <div class="d-flex gap-1 align-items-center my-n2">
                                    <a class="dropdown-item" href="/Project/GetProjectDetails/?Id=@item.ProjectId">
                                        <i class="fa-solid fa-eye"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="d-flex mb-2">
                    <div class="flex-shrink-0 me-3">
                        <div class="avatar-sm">
                            <span class="avatar-title bg-warning-subtle rounded p-2">
                                <img src="~/@item.ProjectImage" alt="" class="img-fluid p-1">
                            </span>
                        </div>
                    </div>
                    <div class="flex-grow-1">
                        <h5 class="mb-1 fs-15"><a class="text-body">@item.ProjectTitle</a></h5>
                        <p class="text-muted text-truncate-two-lines mb-3">
                            @item.ProjectDescription
                        </p>
                    </div>
                </div>
                <div class="py-3">
                    <div class="row gy-3">
                        <div class="col-6">
                            <div>
                                <p class="text-muted mb-1">Status</p>
                                <div class="badge bg-warning-subtle text-warning fs-12">@item.ProjectStatus</div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div>
                                <p class="text-muted mb-1">Deadline</p>
                                <h5 class="fs-14">@item.ProjectDeadline.ToString("dd/MM/yyyy")</h5>
                            </div>
                        </div>
                        <div class="mt-auto">
                            <div class="d-flex mb-2">
                                <div class="flex-grow-1">
                                    <div>Tasks</div>
                                </div>
                                <div class="flex-shrink-0">
                                    <div>
                                        <i class="ri-list-check align-bottom me-1 text-muted"></i>
                                        @item.TaskCount
                                    </div>
                                </div>
                            </div>
                            <div class="progress progress-sm animated-progress">
                                <div class="progress-bar bg-primary" role="progressbar" aria-valuenow="34" aria-valuemin="0" aria-valuemax="100" style="width: 34%;">
                                </div><!-- /.progress-bar -->
                            </div><!-- /.progress -->
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <div class="avatar-group">
                                <a href="javascript: void(0);" class="avatar-group-item" data-bs-toggle="tooltip" data-bs-trigger="hover" data-bs-placement="top" aria-label="Darline Williams" data-bs-original-title="Darline Williams">
                                    <div class="avatar-xxs">
                                        <img src="assets/images/users/avatar-2.jpg" alt="" class="rounded-circle img-fluid">
                                    </div>
                                </a>
                                <a href="javascript: void(0);" class="avatar-group-item" data-bs-toggle="tooltip" data-bs-trigger="hover" data-bs-placement="top" data-bs-original-title="Add Members">
                                    <div class="avatar-xxs">
                                        <div class="avatar-title fs-16 rounded-circle bg-light border-dashed border text-primary">
                                            +
                                        </div>
                                    </div>
                                </a>
                            </div>
                        </div>
                        <div class="flex-shrink-0">
                            <div class="text-muted">
                                <i class="ri-calendar-event-fill me-1 align-bottom"></i> @item.ProjectStartDate.ToString("dd/MM/yyyy")

                            </div>
                        </div>

                    </div>

                </div>
            </div>
            <!-- end card -->
        </div>


    }

</div>




@Html.PagedListPager((IPagedList)Model, page => Url.Action("GetHomeProjectListPartial", new
    {
        page = page,
        searchfor = @Context.Request.Query["searchfor"],
        searchby = @Context.Request.Query["searchby"]
    }),
                            new X.PagedList.Web.Common.PagedListRenderOptions
                        {
                            LiElementClasses = new string[] { "page-item" },
                            PageClasses = new string[] { "page-link" }
                        })



