@model IEnumerable<EMPManegment.EntityModels.View_Model.EmpDetailsView>
@using EMPManegment.Web.Models;
@inject IHttpContextAccessor Accessor;
@inject UserSession _userSession;
@using X.PagedList;
@using X.PagedList.Mvc.Core;
@{
    ViewData["Title"] = "UserActiveDecative";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<!-- start page title -->
<div class="row" style="margin-top:80px;">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0">Active Deactive</h4>
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">User</a></li>
                    <li class="breadcrumb-item active">ActiveDeactive</li>
                </ol>
            </div>

        </div>
    </div>
</div>
<!-- end page title -->
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header border">
                <div class="d-flex align-items-center">
                    <h5 class="card-title mb-0 flex-grow-1">Users</h5>
                    <div class="flex-shrink-0">
                        <div class="d-flex gap-2 flex-wrap">
                            <form id="SearchEmpForm">
                                <div class="row g-2">
                                    <div class="col-lg-auto">
                                        <div class="btn-group">
                                            <a onclick="UADBackbtn()" class="btn btn-warning" id="backBtn" style="display:none;"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path fill="currentColor" d="m5.828 7l2.536 2.535L6.95 10.95L2 6l4.95-4.95l1.414 1.415L5.828 5H13a8 8 0 1 1 0 16H4v-2h9a6 6 0 0 0 0-12z" /></svg> </a>
                                            <button class="btn btn-primary btn-md form-select" id="ddlUACSearch" type="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="width:150px">
                                                Search By
                                            </button>
                                            <div class="dropdown-menu">
                                                <a class="dropdown-item" data-value="Department">Department</a>
                                                <a class="dropdown-item" data-value="UserName">UserName</a>
                                            </div>
                                        </div>
                                        <input type="hidden" id="SelectDropdown" name="SelectDropdown">
                                    </div>
                                    <div class="col" id="departmentbox" style="display:none;">
                                        <input type="text" class="form-control text-center" id="UADDepartmentList" name="UADDepartmentList" placeholder="--select department--" style="width: 170px;">
                                        <input type="hidden" id="UADDepartmentListHidden" name="UADDepartmentListHidden">
                                    </div>
                                    <div class="col" id="usernamebox" style="display:none;">
                                        <input type="text" class="form-control text-center" id="UADUserList" name="UADUserList" placeholder="--select userName--" style="width: 250px;">
                                        <input type="hidden" id="UADUserListHidden" name="UADUserListHidden">
                                    </div>
                                    <div class="col-lg-auto" style="display:none;" id="UADSearchbtn">
                                        <a class="btn btn-success" onclick="GetUserSearchData()" value="Validate"><i class="ri-search-line"></i></a>
                                    </div>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
            <!-- Partial View-->
            <div class="card-body">
                <div id="activedeactivepartial">
                </div>
                <input type="text" id="txtUpdatedById" class="form-control" hidden value="@_userSession.UserId" />
            </div>

            <h4 class="fs-22 fw-semibold ff-secondary mb-4">
                <span class="text-danger" id="errorMessage"></span>
            </h4>
        </div>
    </div>
</div>
<!-- end card -->

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/moduls/userdetailsscript.js" asp-append-version="true"></script>


