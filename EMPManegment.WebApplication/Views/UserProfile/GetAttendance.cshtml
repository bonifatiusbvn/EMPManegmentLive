
@{
    ViewData["Title"] = "GetAttendance";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}
@* <h1 class="text-info modal-title" >GetAttendance</h1> *@

<style>
    .buttonsort{
        width: 17px;
        height:30px;
    }
</style>
<!-- start page title -->
<div class="row" style="margin-top:20px;">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0">Get Attendance</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Pages</a></li>
                    <li class="breadcrumb-item active">Get Attendance</li>
                </ol>
            </div>

        </div>
    </div>
</div>
<!-- end page title -->
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
            </div><!-- end card header -->

            <div class="card-body">
                <div class="listjs-table" id="customerList">
                    <div class="row g-4 mb-3">
                        <div class="row g-2">
                            <div class="col-lg-auto">
                                <button type="button" class="btn btn-primary btn-sm">Search By
                                    <select class="btn btn-primary btn-sm dropdown-toggle dropdown-toggle-split buttonsort" id="SelectAttandance" data-choices data-choices-search-false name="choices-single-default">                 
                                    <option class="form-control" selected disabled value=""> </option> 
                                    <option class="form-control" value="ByMonth">Month</option>
                                    <option class="form-control" value="BetweenDates">Between Dates</option>
                                </select>
                                </button>
                            </div>
                            <div class="col-sm" id="monthbox">
                                <div class="search-box">
                                    <input type="month" id="txtmonth" class="form-control search" placeholder="Search By Month">
                                    <i class="ri-search-line search-icon"></i>
                                </div>
                            </div>
                            <div class="col-sm" id="datebox">
                                <div class="search-box" >
                                    <input type="date" id="txtstartdate" class="form-control search" placeholder="Search By start date">
                                    <i class="ri-search-line search-icon"></i>
                                </div>
                            </div>
                            <div class="col-sm" id="datebox1">
                                <div class="search-box">
                                    <input type="date" id="txtenddate" class="form-control search" placeholder="Search By end date">
                                    <i class="ri-search-line search-icon"></i>
                                </div>
                            </div>
                            <div class="col-lg-auto">
                                <button class="btn btn-success" type="button" onclick="GetAttendance()" id="currentmonthattendance">
                                    Search
                                </button>
                            </div>
                        </div>

                    </div>
                    <div class="table-responsive table-card mt-3 mb-1">
                        <table class="table align-middle table-nowrap" id="customerTable">
                            <thead class="table-light">
                                <tr class="text-center">
                                    <th class="sort" data-sort="customer_name">UserName</th>
                                    <th class="sort" data-sort="email">Date</th>
                                    <th class="sort" data-sort="phone">Intime</th>
                                    <th class="sort" data-sort="date">OutTime</th>
                                    <th class="sort" data-sort="status">TotalHours</th>
                                </tr>
                            </thead>
                            <tbody class="text-center" id="TableDataAttendanceList">
                              
                            </tbody>
                        </table>
                        <div class="noresult" style="display: none">
                            <div class="text-center">
                                <lord-icon src="https://cdn.lordicon.com/msoeawqm.json" trigger="loop" colors="primary:#25a0e2,secondary:#00bd9d" style="width:75px;height:75px">
                                </lord-icon>
                                <h5 class="mt-2">Sorry! No Result Found</h5>
                                <p class="text-muted mb-0">
                                    We've searched more than 150+ Orders We did not find any
                                    orders for you search.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/moduls/UserAttendanceScript.js" asp-append-version="true"></script>

