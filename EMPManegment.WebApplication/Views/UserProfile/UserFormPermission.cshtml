@using EMPManegment.Web.Models;
@inject IHttpContextAccessor Accessor;
@inject UserSession _userSession
@{
    ViewData["Title"] = "UserFormPermission";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<div class="row" style="margin-top:80px;">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0">User Form Permission</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">User</a></li>
                    <li class="breadcrumb-item active">User Form Permission</li>
                </ol>
            </div>

        </div>
    </div>
</div>
<!-- end page title -->
<div id="createUserModal" class="modal fade flip" tabindex="-1" role="dialog" aria-labelledby="createUserModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form id="addUserForm">
                <div class="modal-header bg-primary-subtle p-3">
                    <h5 class="modal-title" id="createUserModalLabel">User Form Permission</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="hstack gap-3 align-items-start">
                        <div class="flex-grow-1">
                            <label for="drpAttusername" class="form-label">User <span class="text-danger">*</span></label>
                            <input type="text" value="@_userSession.UserId" id="textuserId" hidden />
                            <select class="form-control from-select" id="drpAttusername" name="drpAttusername">
                                <option value="">---Select Username---</option>
                            </select>
                            <input type="text" class="form-control" id="textUserIdfrm" name="textUserIdfrm" hidden />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-success" onclick="validateAndCreateUser()">Create</button>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <div class="d-flex align-items-center">
                <div class="card-title mb-0 flex-grow-1 text-info">
                    <button id="userdropdownButton" class="btn btn-primary form-select" type="button" aria-haspopup="true" aria-expanded="false" style="width: 220px;">
                        Select-User
                    </button>
                    <div id="usercustomDropdown" class="dropdown-menu" style="display: none;width: 180px;">
                    </div>

                </div>
                <div class="flex-shrink-0">
                    <form class="position-relative">
                        @if (UserSession.FormPermisionData.Any(a => a.FormName == "User Form Permission" && (a.Add == true)))
                        {
                            <button type="button" class="btn btn-block btn-info btn-md" data-bs-toggle="modal" data-bs-target="#createUserModal" onclick="clearTextUserName()" style="margin-top:0px;"><i class="ri-add-line align-bottom me-1"></i>UserPermission</button>
                        }
                    </form>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive" style="position: relative; height: 600px; overflow: auto;">
                <table class="table table-bordered dt-responsive table-striped align-middle dataTable no-footer dtr-inline">
                    <thead class="btn-info text-center" style="position: sticky; top: 0; z-index: 1;">
                        <tr>
                            <th>Form Name</th>
                            <th>IsAddAllow</th>
                            <th>IsViewAllow</th>
                            <th>IsEditAllow</th>
                            <th>IsDeleteAllow</th>
                            <th>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="userCheckboxAll" onclick="userAllCheckboxes(this)">
                                </div>
                            </th>
                        </tr>
                    </thead>
                    <tbody id="dveditUserForm" class="gridjs-tbody">
                    </tbody>
                </table>
                <div class="text-end" id="userupdatebtn" style="display:none;">
                    <button type="button" class="btn btn-lg btn-primary" onclick="UpdateUserFormPermission()" style="width: 160px;height: 50px;">Update</button>
                </div>
            </div>
        </div>

    </div>
</div>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        var allCheckbox = document.getElementById('userCheckboxAll');
        var checkboxes = document.querySelectorAll('.form-check-input-all, .user-checkbox');
        allCheckbox.checked = Array.from(checkboxes).every(function (checkbox) {
            return checkbox.checked;
        });
    });
</script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/moduls/FormPermissionScript.js" asp-append-version="true"></script>



