@{
    ViewData["Title"] = "RolewisePermission";
    Layout = "~/Views/Shared/_UserHomeLayout.cshtml";
}

<div class="row" style="margin-top:20px;">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0">Rolewise Form Permission</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Authentication</a></li>
                    <li class="breadcrumb-item active">Rolewise Form Permission</li>
                </ol>
            </div>

        </div>
    </div>
</div>
<!-- end page title -->

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="listjs-table" id="customerList">
                    <div class="row g-4 mb-3">
                        <div class="row g-2">
                            <div class="col-lg-auto">
                                <div class="btn btn-primary" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <select class="dropdown-toggle dropdown-toggle-split show" id="txtUserRole">
                                            <option>--Select UserRole--</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-lg-auto">
                                <button class="btn btn-success" type="button" onclick="EditRoleWiseFormDetails()" id="currentmonthattendance">
                                    Search
                                </button>
                            </div>
                            <div class="col-lg-auto" id="backbtn" style="display:none;">
                                <button type="button" class="btn btn-info" onclick="backBtn()">Back</button>
                            </div>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="table align-middle mb-0">
                            <thead class="table-light btn-primary">
                                <tr>
                                    <th>Form Name</th>
                                    <th>IsAddAllow</th>
                                    <th>IsViewAllow</th>
                                    <th>IsEditAllow</th>
                                    <th>isDeleteAllow</th>
                                </tr>
                            </thead>
                            <tbody id="dveditRolePermissionForm">
                            </tbody>
                        </table>
                        <div class="col-12" id="updatebtn" style="display:none;">
                            <button type="button" class="btn btn-lg btn-success col-lg-12" onclick="UpdateRolewiseFormPermission()" id="btnUserRolewiseForm">Update</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/moduls/rolewiseformpermissionscript.js" asp-append-version="true"></script>