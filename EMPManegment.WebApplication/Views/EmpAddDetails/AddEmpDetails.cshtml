            <!--begin::Body-->
            <div class="d-flex flex-column-fluid flex-lg-row-auto justify-content-center justify-content-lg-end p-12 p-lg-20">
                <!--begin::Card-->
                <div class="bg-body d-flex flex-column align-items-stretch flex-center rounded-4 w-md-600px p-20">
                    <!--begin::Wrapper-->
                    <div class="d-flex flex-center flex-column flex-column-fluid px-lg-10 pb-15 pb-lg-20">

                        <!--begin::Form-->
                        <form class="form w-100" id="empaddDetails" asp-action="AddEmpDetails" method="post">

                            <div class="text-center mb-11">
                                <h1 class="text-dark fw-bolder mb-3">
                                    Sign Up
                                </h1>
                            </div>
                            <div class="fv-row mb-6">
                                <select asp-for=Department id="ddlDepartmenrnt" class="form-control bg-transparent">
                                    <option>--Select Department--</option>
                                </select>
                                <input type="hidden" asp-for="Department" id="txtdeptid" value="" />
                                <span asp-validation-for="Department" class="text-danger"></span>
                            </div>
                            <div class="fv-row mb-6">
                                <input type="text" asp-for="EmpId" readonly id="EmpId" autocomplete="off" class="form-control bg-transparent" value="@ViewBag.EmpId" />
                            </div>
                            <div class="row">

                                <div class="col-6">
                                    <div class="fv-row mb-6">
                                        <input type="text" asp-for="FirstName" placeholder="First Name" name="FirstName" class="form-control bg-transparent" />
                                        <span asp-validation-for="FirstName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="fv-row mb-6">
                                        <input type="text" asp-for="LastName" placeholder="Last Name" name="LastName"  class="form-control bg-transparent" />
                                        <span asp-validation-for="LastName" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="fv-row mb-8" data-kt-password-meter="true">
                                <div class="mb-1">
                                    <div class="position-relative mb-3">
                                        <div class="row">
                                            <div class="col-6">
                                                <div class="fv-row mb-6">
                                                    <input type="date" asp-for="DateOfBirth" placeholder="DOB" itemid="DOB" autocomplete="off" class="form-control bg-transparent" />
                                                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-6">
                                                <div class="fv-row mb-6">
                                                    <select asp-for="Gender" id="Gender" class="form-control bg-transparent">
                                                         <option value="Male">Male</option>
                                                        <option value="Female">Female</option>
                                                        <option value="Other">Other</option>
                                                    </select>
                                                    <span asp-validation-for="Gender" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="fv-row mb-6">
                                            <input type="text"  asp-for="Email" placeholder="Email" id="email" autocomplete="off" class="form-control bg-transparent" />
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <div class="fv-row mb-6">
                                        <select asp-for=Country id="ddlCountry" class="form-control bg-transparent">
                                            <option>--Select Country--</option>
                                        </select>
                                        <input type="hidden" asp-for="Country" id="txtcountry" value="" />
                                        <span asp-validation-for="Country" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="fv-row mb-6">
                                        <select asp-for=State id="ddlState" class="form-control bg-transparent">
                                            <option>--Select State--</option>
                                        </select>
                                        <input type="hidden" asp-for="State" id="txtstate" value="" />
                                        <span asp-validation-for="State" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="fv-row mb-8">
                                <div class="row">
                                    <div class="col-6">
                                        <div class="fv-row mb-6">
                                            <select asp-for=City id="ddlCity" class="form-control bg-transparent">
                                                <option>--Select City--</option>
                                            </select>
                                            <input type="hidden" asp-for="City" id="txtcity" value="" />
                                            <span asp-validation-for="City" class="text-danger"></span>
                                           
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="fv-row mb-6">
                                            <input type="text" asp-for="PhoneNumber" placeholder="Mobile.NO" id="PhoneNumber" autocomplete="off" class="form-control bg-transparent" />
                                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="fv-row mb-6">
                                        <input type="text" asp-for="Address" class="form-control bg-transparent" placeholder="Address" id="Address" style="height: 75px;" />
                                        <span asp-validation-for="Address" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="d-grid mb-10">
                                <button type="submit" id="empdetails" class="btn btn-primary">
                                    <span class="indicator-label">
                                        Sign up
                                    </span>
                                </button>
                            </div>
