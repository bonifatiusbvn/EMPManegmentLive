@model EMPManegment.EntityModels.ViewModels.PurchaseOrderModels.PurchaseOrderMasterView
@inject EMPManegment.Web.Helper.Common CommonHelper
@{
    ViewData["Title"] = "ShowProductDetails";
    Layout = "~/Views/Shared/_UserHomeLayout.cshtml";
}


<!-- start page title -->
<div class="row" style="margin-top:80px;">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0">Purchase Order Details</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Purchase Order</a></li>
                    <li class="breadcrumb-item active">Purchase Order Details</li>
                </ol>
            </div>

        </div>
    </div>
</div>
<!-- end page title -->
@{
    var firstItem = Model;
    decimal? subTotal = 0;
    decimal? totalAmount = 0;
    decimal? totalGst = 0;
}

<div class="row justify-content-center">
    <div class="col-xxl-9">
        <div class="card" id="demo">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card-header border-bottom-dashed p-4">
                        <div class="d-flex">
                            <div class="flex-grow-1">
                                <img src="~/assets/images/logo - bonifatius.jpeg" style="height: 25px;" />
                                <div class="mt-sm-5 mt-4">
                                    <h6 class="text-muted text-uppercase fw-semibold">Address</h6>
                                    <p class="text-muted mb-1" id="address-details">SF- 203, Peridot Complex, Urmi co-Operative scoiety, Swami Shivanand Marg,</p>
                                    <p class="text-muted mb-1"><span>Ajit Nagar Society, Akota, Vadodara, Gujarat </span></p>
                                    <p class="text-muted mb-0" id="Postal-code"><span>Postal-code:</span>390020</p>
                                </div>
                            </div>
                            <div class="flex-shrink-0 mt-sm-0 mt-3">
                                <h6><span class="text-muted fw-normal">Email:</span><span id="email">info@bonifatius.net</span></h6>
                                <h6><span class="text-muted fw-normal">Website:</span> <a href="https://bonifatius.net/" class="link-primary" target="_blank" id="website">bonifatius.net</a></h6>
                                <h6 class="mb-0"><span class="text-muted fw-normal">Contact No: </span><span id="contact-no">+91 265-7965687</span></h6>
                            </div>
                        </div>
                    </div>
                    <!--end card-header-->
                </div><!--end col-->
                <div class="col-lg-12">
                    <div class="card-body p-4">
                        <div class="row g-3">
                            @if (firstItem != null)
                            {
                                <div class="col-lg-3 col-6">
                                    <p class="text-muted mb-2 text-uppercase fw-semibold">Purchase Order No</p>
                                    <h5 class="fs-14 mb-0"><span id="invoice-no">@firstItem.OrderId</span></h5>
                                </div>
                                <!--end col-->
                                <div class="col-lg-3 col-6">
                                    <p class="text-muted mb-2 text-uppercase fw-semibold">Date</p>
                                    <h5 class="fs-14 mb-0"><span id="invoice-date">@CommonHelper.GetCommonDateFormat(firstItem.OrderDate)</span></h5>
                                </div>
                                <!--end col-->
                                <div class="col-lg-3 col-6">
                                    <p class="text-muted mb-2 text-uppercase fw-semibold">Payment Status</p>
                                    <span class="badge bg-success-subtle text-success fs-11" id="payment-status" style="width: 100px;height: 18px;">@firstItem.PaymentStatusName</span>
                                </div>
                                <!--end col-->
                                <div class="col-lg-3 col-6">
                                    <p class="text-muted mb-2 text-uppercase fw-semibold">Total Amount</p>
                                    <h5 class="fs-14 mb-0">₹<span id="total-amount">@firstItem.TotalAmount</span></h5>
                                </div>
                                <!--end col-->
                            }
                        </div>
                        <!--end row-->
                    </div>
                    <!--end card-body-->
                </div><!--end col-->
                <div class="col-lg-12">
                    <div class="card-body p-4 border-top border-top-dashed">
                        <div class="row g-3">
                            @if (firstItem?.Address != firstItem?.CompanyFullAddress)
                            {
                                <div class="col-6">
                                    <h6 class="text-muted text-uppercase fw-semibold mb-3">Billing Address</h6>
                                    <p class="fw-medium mb-2" id="billing-name">@firstItem.CompanyName</p>
                                    <p class="text-muted mb-1" id="billing-address-line-1">@firstItem.CompanyFullAddress</p>

                                    <p class="text-muted mb-0"><span>Tax: </span><span id="billing-tax-no">@firstItem.CompanyGstNumber</span> </p>
                                </div>
                                <!--end col-->
                                <div class="col-6">
                                    <h6 class="text-muted text-uppercase fw-semibold mb-3">Shipping Address</h6>
                                    <p class="fw-medium mb-2" id="shipping-name">@firstItem.Address</p>
                                </div>
                                <!--end col-->
                            }
                            else
                            {
                                <div class="col-6">
                                    <h6 class="text-muted text-uppercase fw-semibold mb-3">Billing Address</h6>
                                    <p class="fw-medium mb-2" id="billing-name">@firstItem.CompanyName</p>
                                    <p class="text-muted mb-1" id="billing-address-line-1">@firstItem.CompanyFullAddress</p>
                                    <p class="text-muted mb-0"><span>Tax: </span><span id="billing-tax-no">@firstItem.CompanyGstNumber</span> </p>
                                </div>
                                <!--end col-->
                            }
                        </div>
                        <!--end row-->
                    </div>
                    <!--end card-body-->
                </div><!--end col-->
                <div class="col-lg-12">
                    <div class="card-body p-4">
                        <div class="table-responsive">
                            <table class="table table-borderless text-center table-nowrap align-middle mb-0">
                                <thead>
                                    <tr class="table-active">
                                        <th>#</th>
                                        <th>Product Details</th>
                                        <th>Quantity</th>
                                        <th>GST</th>
                                        <th>Price</th>
                                        <th>Amount</th>
                                    </tr>
                                </thead>
                                <tbody id="products-list">
                                    @{
                                        int index = 1;
                                        decimal subtotal = 0;
                                    }
                                    @foreach (var item in Model.ProductList)
                                    {
                                        <tr>

                                            <th scope="row">@index</th>
                                            <td class="text-start">@item.Product</td>
                                            <td>@item.Quantity</td>
                                            <td>@item.Gst</td>
                                            <td>@item.Price</td>
                                            <td class="text-end">@item.ProductTotal</td>
                                        </tr>
                                        index++;
                                    }
                                </tbody>
                            </table><!--end table-->
                            <div class="noresult" style="display: none">
                                <div class="text-center">
                                    <lord-icon src="https://cdn.lordicon.com/msoeawqm.json" trigger="loop" colors="primary:#25a0e2,secondary:#00bd9d" style="width:75px;height:75px">
                                    </lord-icon>
                                    <h5 class="mt-2">Sorry! No Result Found</h5>
                                    <p class="text-muted mb-0">
                                        We've searched more than 150+ invoices We did not find any
                                        invoices for you search.
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="border-top border-top-dashed mt-2">
                            <table class="table table-borderless table-nowrap align-middle mb-0 ms-auto" style="width:250px">
                                <tbody>
                                    <tr>
                                        <td>Sub Total</td>
                                        <td class="text-end">₹@firstItem.SubTotal</td>
                                    </tr>
                                    <tr>
                                        <td>Total GST</td>
                                        <td class="text-end">₹@firstItem.TotalGst</td>
                                    </tr>
                                    <tr class="border-top border-top-dashed fs-15">
                                        <th>Total Amount</th>
                                        <th>₹@firstItem.TotalAmount</th>
                                    </tr>
                                </tbody>
                            </table>
                            <!--end table-->
                            <div class="noresult" style="display: none">
                                <div class="text-center">
                                    <lord-icon src="https://cdn.lordicon.com/msoeawqm.json" trigger="loop" colors="primary:#25a0e2,secondary:#00bd9d" style="width:75px;height:75px">
                                    </lord-icon>
                                    <h5 class="mt-2">Sorry! No Result Found</h5>
                                    <p class="text-muted mb-0">
                                        We've searched more than 150+ invoices We did not find any
                                        invoices for you search.
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="mt-3">
                            <h6 class="text-muted text-uppercase fw-semibold mb-3">Payment Details:</h6>
                            <p class="text-muted mb-1">Payment Method: <span class="fw-medium" id="payment-method">@firstItem.PaymentMethodName</span></p>
                            <p class="text-muted mb-1">User Name: <span class="fw-medium" id="card-holder-name">@firstItem.VendorAccountHolderName</span></p>
                            <p class="text-muted">Total Amount: <span class="fw-medium" id="">₹ </span><span id="card-total-amount">@firstItem.TotalAmount</span></p>
                        </div>
                        <div class="hstack gap-2 justify-content-end d-print-none mt-4">
                            <a href="javascript:window.print()" class="btn btn-primary btn-ecomm" style="margin-left: 950px;width: 185px;"><i class="fadeIn animated bx bx-printer"></i>Print</a>
                        </div>
                    </div>
                    <!--end card-body-->
                </div><!--end col-->
            </div><!--end row-->
        </div>
        <!--end card-->
    </div>
    <!--end col-->
</div>
<!--end row-->
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/moduls/invoicemasterscript.js" asp-append-version="true"></script>