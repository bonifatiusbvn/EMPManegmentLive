                                        @if (_userSession.UserRoll != "Admin")
                                        {
                                            <button type="button" class="btn btn-success btn-sm m-2" onclick="btnStatusUpdate('@item.Id')" disabled><i class="bi bi-pencil-fill"></i>Status Update</button>
                                            <button class="btn btn-primary btn-sm" data-bs-toggle="modal" onclick="btnTaskDetails('@item.Id')"> <i class="bi bi-chat-right-dots"></i> Details</button>
                                        }
                                        else
                                        {
                                            <button type="button" class="btn btn-success btn-sm m-2" onclick="btnStatusUpdate('@item.Id')" id="StatusUpdate" value="Validate"><i class="bi bi-pencil-fill"></i>Status Update</button>
                                            <button class="btn btn-primary btn-sm" data-bs-toggle="modal" onclick="btnTaskDetails('@item.Id')"> <i class="bi bi-chat-right-dots"></i> Details</button>
                                        }
                                    </div>
                                </div>
                                <!--end card-body-->
                                <div class="card-footer border-top-dashed">
                                    <div class="d-flex mb-1">
                                        <div class="flex-grow-1">
                                            <span class="text-muted">
                                                <i class="ri-time-line align-bottom"></i>
                                                @CommonHelper.GetCommonDateFormat(item?.TaskDate ?? DateTime.MinValue)
                                            </span>
                                        </div>
                                        <div class="flex-grow-1">
                                            <span class="text-muted">
                                                <i class="ri-time-line align-bottom"></i>
                                                @CommonHelper.GetCommonDateFormat(item?.TaskEndDate ?? DateTime.MinValue)
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <!--end card-body-->
                            </div>
                        }
                    }
                </div>
            </div>

            <!--end tasks-list-->
            @* -------------modal start--------------------- *@
            <div class="modal fade zoomIn" id="showDetailsModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered modal-lg">
                    <div class="modal-content border-0">
                        <div class="modal-header p-3 bg-primary-subtle">
