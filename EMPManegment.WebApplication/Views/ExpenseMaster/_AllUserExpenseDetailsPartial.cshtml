<script type="text/javascript">

    function anyCheckboxChecked() {
        return $("input[name='check_Box']:checked").length > 0;
    }

    function updateCheckedAllState() {
        var allChecked = $('input[name="check_Box"]').length === $('input[name="check_Box"]:checked').length;
        $('#checkedAll').prop('checked', allChecked);
    }

    $('#AllUnapprovedExpenseDetailsPartial table').on('change', 'input[name="check_Box"]', function () {
        if (anyCheckboxChecked()) {
            $('#Approve-actions').show();
        } else {
            $('#Approve-actions').hide();
        }
        updateCheckedAllState();
    });

    $('#checkedAll').on('change', function () {
        $('input[name="check_Box"]').prop('checked', $(this).prop('checked'));
        if ($(this).prop('checked')) {
            $('#Approve-actions').show();
        } else {
            $('#Approve-actions').hide();
        }
    });

    $(document).ready(function () {
        $('#Approve-actions').hide();
    });

</script>