@model List<EMPManegment.EntityModels.ViewModels.ExpenseMaster.ExpenseDetailsView>
@using EMPManegment.Web.Models
@inject IHttpContextAccessor Accessor;
@inject UserSession _userSession

@{
    ViewData["Title"] = "ExpenseList";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}
<style>
    .ui-autocomplete {
        z-index: 1051;
        max-height: 150px;
        overflow-y: auto;
        overflow-x: hidden;
    }
</style>
<link href="~/assets/css/icons.min.css" rel="stylesheet" type="text/css" />

<!-- start page title -->
<div class="row" style="margin-top:80px;">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0">Expense List</h4>
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">User Expenses</a></li>
                    <li class="breadcrumb-item active">Expenses</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<!-- end page title -->
<div class="row">
    <div class="col-lg-12">
        <div class="card" id="orderList">
            <div class="card-header">
                <div class="d-flex align-items-center justify-content-between">
                    <h5 class="card-title mb-0">All-Expense History</h5>
                    <div class="d-flex gap-2">
                        <button type="button" class="btn btn-primary" id="Approve-actions" onclick="AllUserApproveExpense()" style="display:none;">
                            <i class="ri-filter-3-line align-bottom me-1"></i>Approve All
                        </button>
                        @if (UserSession.FormPermisionData.Any(a => a.FormName == "All Expenses List" && (a.Add == true)))
                        {
                            <a class="btn btn-info" onclick="DisplayAddExpenseModel()">
                                <i class="ri-add-line align-bottom me-1"></i>Expense
                            </a>
                        }
                    </div>
                </div>
            </div>

            <!--Edit Expense Modal -->
            <div class="modal fade zoomIn" id="EditExpenseModel" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class=" modal-dialog modal-dialog-centered modal-lg">
                    <div class="modal-content border-0">
                        <div class="modal-header bg-primary-subtle p-3">
                            <h5 class="modal-title" id="editModalLabel">Edit Expense Details</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <form id="EditExpenseForm">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="mb-3">
                                            <label for="txtexpensetype" class="form-label">User <span class="text-danger">*</span></label>
                                            <input type="text" class="form-control" id="EditExpenseUserName" name="EditExpenseUserName">
                                            <input type="hidden" id="EditExpenseUserNameHidden" name="EditExpenseUserNameHidden">
                                            <input type="hidden" class="text-muted text-uppercase fw-semibold" id="EditExpenseUserNameid" />
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="mb-3">
                                            <label for="txtexpensetype" class="form-label">Expense Type <span class="text-danger">*</span></label>
                                            <input type="text" class="form-control" id="Editexpensetype" name="Editexpensetype">
                                            <input type="hidden" id="EditexpensetypeHidden" name="EditexpensetypeHidden">
                                            <input type="hidden" class="text-muted text-uppercase fw-semibold" id="Editexpensetypeid" />
                                        </div>
                                        <label id="Editexpensetype-error" class="error" for="Editexpensetype"></label>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="mb-3">
                                            <label class="form-label">Description <span class="text-danger">*</span></label>
                                            <input type="text" id="EditDescription" name="EditDescription" class="form-control" />
                                            <input type="hidden" id="Editid" class="form-control" name="txtid" />
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="mb-3">
                                            <label class="form-label">Bill Number</label>
                                            <input type="text" id="Editbillno" name="Editbillno" class="form-control" />
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="mb-3">
                                            <label class="form-label">Date <span class="text-danger">*</span></label>
                                            <input type="datetime-local" id="Editdate" name="Editdate" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="mb-3">
                                            <label class="form-label">Total Amount <span class="text-danger">*</span></label>
                                            <input type="text" id="Edittotalamount" name="Edittotalamount" class="form-control" oninput="preventEmptyValue(this)" min="1" value="1" />
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="mb-3">
                                            <label class="form-label">Account <span class="text-danger">*</span></label>
                                            <select class="form-control form-select valid" id="Editaccount" name="Editaccount">
                                                <option selected disabled value="">Select Account Type</option>
                                                <option value="Credit">Credit</option>
                                                <option value="Debit">Debit</option>
                                            </select>
                                            <input type="hidden" id="Editaccountid" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="mb-3">
                                            <label for="txtpaymenttype" class="form-label">Payment Type <span class="text-danger">*</span></label>
                                            <select class="form-control form-select valid" id="EditExpensepaymenttype" name="EditExpensepaymenttype">
                                                <option selected disabled value="">---Select Payment Type---</option>
                                            </select>
                                            <input type="hidden" class="text-muted text-uppercase fw-semibold" id="Editpaymenttypeid" />
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="mb-3">
                                            <label class="form-label">IsPaid <span class="text-danger">*</span></label>
                                            <select class="form-control form-select valid" id="EditIsPaid" name="EditIsPaid">
                                                <option selected disabled value="">Select Paid Type</option>
                                                <option value="True">True</option>
                                                <option value="False">False</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="mb-3">
                                            <label class="form-label">IsApproved <span class="text-danger">*</span></label>
                                            <select class="form-control form-select valid" id="EditIsApproved" name="EditIsApproved">
                                                <option selected disabled value="">Select Approved Type</option>
                                                <option value="True">True</option>
                                                <option value="False">False</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-danger btn-default m-1" id="close-modal" data-bs-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-primary m-1" onclick="UpdateExpenseListDetails()" id="updatedetailbtn">Update</button>

                        </div>
                    </div>
                </div>
            </div>
            <!--end Edit Expense modal-->
            <!-- Modal -->
            <div class="modal fade zoomIn" id="AddExpenseModel" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class=" modal-dialog modal-dialog-centered modal-lg">
                    <div class="modal-content">
                        <div class="modal-header bg-primary-subtle p-3">
                            <h5 class="modal-title" id="exampleModalLabel">Add Expense Details</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <form id="formexpensedetails">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <label class="form-label">User <span class="text-danger">*</span></label>
                                        <div class="d-flex justify-content-between align-items-center">
                                            <input type="text" class="form-control" id="txtExpenseUsername" name="txtExpenseUsername" placeholder="Enter UserName">
                                            <input type="hidden" id="txtExpenseUsernameHidden" name="txtExpenseUsernameHidden">
                                            <input type="hidden" class="text-muted text-uppercase fw-semibold" id="txtExpenseUsernameid">
                                        </div>
                                        <label id="txtExpenseUsername-error" class="error" for="txtExpenseUsername"></label>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="mb-3">
                                            <div class="d-flex justify-content-between align-items-center" style="margin-top:-10px;">
                                                <label for="txtexpensetype" class="form-label">Expense Type <span class="text-danger">*</span></label>
                                                <p class="text-muted">
                                                    <button type="button" onclick="DisplayExpenseTypeModal()" class="float-end text-decoration-underline btn btn-link waves-effect">
                                                        Add New-Expense Type
                                                    </button>
                                                </p>
                                            </div>
                                            <div class="d-flex justify-content-between align-items-center" style="margin-top:-12px;">
                                                <input type="text" class="form-control" id="txtexpensetype" name="txtexpensetype" placeholder="Enter Expense Type">
                                                <input type="hidden" id="txtexpensetypeHidden" name="txtexpensetypeHidden">
                                                <input type="hidden" class="text-muted text-uppercase fw-semibold" id="txtexpensetypeid">
                                                <input type="hidden" class="text-muted text-uppercase fw-semibold" id="txtaccount" value="Debit">
                                            </div>
                                            <label id="txtexpensetype-error" class="error" for="txtexpensetype"></label>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="mb-3">
                                            <label class="form-label">Description <span class="text-danger">*</span></label>
                                            <input type="text" id="txtDescription" class="form-control" name="txtDescription" placeholder="Enter Description" />
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="mb-3">
                                            <label class="form-label">Bill Number</label>
                                            <input type="text" id="txtbillno" class="form-control" name="txtbillno" placeholder="Enter Bill Number" />
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="mb-3">
                                            <label class="form-label">Date <span class="text-danger">*</span></label>
                                            <input type="date" id="txtdate" class="form-control" name="txtdate" placeholder="Enter Date" />
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="mb-3">
                                            <label class="form-label">Total Amount <span class="text-danger">*</span></label>
                                            <input type="number" id="txttotalamount" class="form-control" name="txttotalamount" placeholder="Enter Amount" oninput="preventEmptyValue(this)" min="1" value="1" />
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="mb-3">
                                            <label class="form-label">Image</label>
                                            <input type="file" id="txtimage" class="form-control" name="txtimage" placeholder="Enter Image" />
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-danger btn-default m-1" id="close-modal" data-bs-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-success" onclick="AddAllUserExpenseDetails();">Save</button>
                        </div>
                    </div>
                </div>
            </div>
            <!--end modal-->

            <div class="card-body pt-0">
                <div>
                    <ul class="nav nav-tabs nav-tabs-custom nav-primary mb-3" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active py-3" data-bs-toggle="tab" href="#AllExpenseDetails" role="tab">
                                <i class="ri-store-2-fill me-1 align-bottom"></i> All Expense
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link py-3" data-bs-toggle="tab" href="#AllUnapprovedExpenseDetails" role="tab">
                                <i class="ri-checkbox-circle-line me-1 align-bottom"></i> Unapproved Expense
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link py-3" data-bs-toggle="tab" href="#AllTodayExpenseDetails" role="tab">
                                <i class="ri-bank-card-line me-1 align-bottom"></i> Today's Expense
                            </a>
                        </li>
                    </ul>

                    <div class="tab-content">
                        <div class="tab-pane fade show active" id="AllExpenseDetails" role="tabpanel">
                            <div id="AllExpenseDetailsPartial"></div>
                        </div>
                        <div class="tab-pane fade" id="AllUnapprovedExpenseDetails" role="tabpanel">
                            <div id="AllUnapprovedExpenseDetailsPartial"></div>
                        </div>
                        <div class="tab-pane fade" id="AllTodayExpenseDetails" role="tabpanel">
                            <div id="AllTodayExpenseDetailsPartial"></div>
                        </div>
                    </div>




                    <div class="table-responsive" id="allExpenseUnApproved" style="display: none;">
                        <table class="table table-bordered dt-responsive nowrap table-striped align-middle dataTable no-footer dtr-inline" id="ExpenseTable">
                            <thead class="table-info text-muted text-center">
                                <tr>
                                    <th>User Name</th>
                                    <th>
                                        Description
                                    </th>
                                    <th>BillNo</th>
                                    <th>Date</th>
                                    <th>TotalAmount</th>
                                    <th>Account</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody class="list form-check-all text-center dt-responsive"></tbody>
                        </table>
                        <div class="noresult" style="display: none">
                            <div class="text-center">
                                <lord-icon src="https://cdn.lordicon.com/msoeawqm.json" trigger="loop" colors="primary:#25a0e2,secondary:#00bd9d" style="width:75px;height:75px">
                                </lord-icon>
                                <h5 class="mt-2">Sorry! No Result Found</h5>
                                <p class="text-muted mb-0">
                                    We've searched more than 150+ invoices We did not find any
                                    invoices for you search.
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="table-responsive" id="allExpenseApproved" style="display: none;">
                        <table class="table table-bordered dt-responsive nowrap table-striped align-middle dataTable no-footer dtr-inline" id="ExpenseTable">
                            <thead class="table-info text-muted text-center ">
                                <tr>
                                    <th>User Name</th>
                                    <th>Description</th>
                                    <th>BillNo</th>
                                    <th>Date</th>
                                    <th>TotalAmount</th>
                                    <th>Account</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody class="list form-check-all text-center dt-responsive"></tbody>
                        </table>
                        <div class="noresult" style="display: none">
                            <div class="text-center">
                                <lord-icon src="https://cdn.lordicon.com/msoeawqm.json" trigger="loop" colors="primary:#25a0e2,secondary:#00bd9d" style="width:75px;height:75px">
                                </lord-icon>
                                <h5 class="mt-2">Sorry! No Result Found</h5>
                                <p class="text-muted mb-0">
                                    We've searched more than 150+ invoices We did not find any
                                    invoices for you search.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <!--end col-->
</div>
<form id="addExpenseType">
    <div id="ExpenseTypeModal" class="modal fade flip" tabindex="-1" aria-labelledby="flipModalLabel" aria-hidden="true" style="display: none;">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-primary-subtle p-3">
                    <h5 class="modal-title" id="flipModalLabel">Add Expense Type</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="hstack gap-3 align-items-start">
                        <div class="flex-grow-1">
                            <label>Expense Type <span class="text-danger">*</span></label>
                            <input class="form-control" id="textExpenseType" name="textExpenseType" placeholder="Enter Expense Type" type="text" />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" onclick="AddExpenseType()">Save</button>
                </div>

            </div><!-- /.modal-content -->

        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
</form>


<script type="text/javascript">
    var userPermissions = '@Html.Raw(Json.Serialize(UserSession.FormPermisionData))';

    document.addEventListener('DOMContentLoaded', function () {
        var modal = document.getElementById('AddExpenseModel');
        modal.addEventListener('shown.bs.modal', function () {
            var dateInput = document.getElementById('txtdate');

            const today = new Date();
            const yyyy = today.getFullYear();
            const mm = String(today.getMonth() + 1).padStart(2, '0');
            const dd = String(today.getDate()).padStart(2, '0');

            const formattedToday = `${yyyy}-${mm}-${dd}`;

            dateInput.setAttribute('max', formattedToday);

            dateInput.value = formattedToday;
        });
    });
    document.addEventListener('DOMContentLoaded', function () {
        var modal = document.getElementById('EditExpenseModel');
        modal.addEventListener('shown.bs.modal', function () {
            var dateInput = document.getElementById('Editdate');

            const today = new Date();
            const yyyy = today.getFullYear();
            const mm = String(today.getMonth() + 1).padStart(2, '0');
            const dd = String(today.getDate()).padStart(2, '0');
            const hh = String(today.getHours()).padStart(2, '0');
            const min = String(today.getMinutes()).padStart(2, '0');

            const formattedToday = `${yyyy}-${mm}-${dd}T${hh}:${min}`;

            dateInput.setAttribute('max', formattedToday);
        });
    });
</script>
