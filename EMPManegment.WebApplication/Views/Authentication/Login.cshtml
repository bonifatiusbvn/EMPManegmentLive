    <!-- Sweet Alerts js -->
    <!-- DataTables  & Plugins -->
    <script src="~/lteassets/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/lteassets/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/lteassets/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
