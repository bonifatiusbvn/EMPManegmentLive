@model EMPManegment.EntityModels.ViewModels.LoginRequest

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bonifatius | ERP</title>
    <link href="~/assets/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/lteassets/plugins/fontawesome-free/css/all.min.css">
    <!-- overlayScrollbars -->
    <link rel="stylesheet" href="~/lteassets/plugins/overlayScrollbars/css/OverlayScrollbars.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/lteassets/dist/css/adminlte.min.css">
    <link href="~/assets/libs/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
    <!-- Toastr -->
    <link rel="stylesheet" href="~/lteassets/plugins/toastr/toastr.min.css">
    <!-- DataTables -->
    <link rel="stylesheet" href="~/lteassets/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="~/lteassets/plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
    <link rel="stylesheet" href="~/lteassets/plugins/datatables-buttons/css/buttons.bootstrap4.min.css">
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <!-- /.login-logo -->
        <div class="card card-outline card-primary">
            <div class="card-header text-center">
                <p class="h1"><b>Bonifatius</b>ERP</p>
            </div>
            <div class="card-body">
                <p class="login-box-msg">Sign in to start your session</p>

                <form asp-action="Login" asp-controller="Authentication">
                    <div class="mb-3">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="UserId" asp-for="UserName" id="LoginUserName" value="@ViewBag.UserName">
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <i class="fa-solid fa-user"></i>
                                </div>
                            </div>
                        </div>
                        <div>
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="input-group">
                            <input type="password" value="@ViewBag.Password" class="form-control" placeholder="Password" id="LoginPassword" asp-for="Password">
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <a id="password-toggle">
                                        <div id="open">
                                            <i class="fa-solid fa-eye"></i>
                                        </div>
                                        <div class="d-none" id="close">
                                            <i class="fa-solid fa-eye-slash"></i>
                                        </div>
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                            <span class="text-danger">@TempData["ErrorMessage"]</span>
                        </div>
                    </div>
                    
                    
                    <div class="row">
                        <div class="col-8">
                            <div class="icheck-primary">
                                <input type="checkbox" role="switch" id="flexSwitchCheckRemember" asp-for=RememberMe checked="@ViewBag.checkRememberMe">
                                <label for="remember">
                                    Remember Me
                                </label>
                            </div>
                        </div>
                        <!-- /.col -->
                        <div class="col-4">
                            <button type="submit" id="LoginSubmit" class="btn btn-primary btn-block">Sign In</button>
                        </div>
                        <!-- /.col -->
                    </div>
                </form>

            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
    <!-- /.login-box -->
    <!-- jQuery -->
    <!-- AdminLTE App -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lteassets/dist/js/adminlte.js"></script>


    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <!-- Sweet Alerts js -->
    <!-- App js -->


</body>
</html>

<script>
    $(document).ready(function () {
        $('#password-toggle').click(function () {

            var passwordInput = $('#LoginPassword');
            var openIcon = $('#open');
            var closeIcon = $('#close');

            if (passwordInput.attr('type') === 'password') {
                passwordInput.attr('type', 'text');
                openIcon.addClass('d-none');
                closeIcon.removeClass('d-none');
            } else {
                passwordInput.attr('type', 'password');
                openIcon.removeClass('d-none');
                closeIcon.addClass('d-none');
            }
        });
    });

</script>