

@{
    ViewData["Title"] = "GetUsersListById";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title mb-0">Edit UserAttendance</h4>
            </div><!-- end card header -->

            <div class="card-body">
                <div class="listjs-table" id="customerList">
                    <div class="row g-4 mb-3">
                        
                        <div class="col-sm">
                            <div class="d-flex justify-content-sm-end">
                                <div class="search-box ms-2">
                                    <input type="text" class="form-control search" placeholder="Search...">
                                    <i class="ri-search-line search-icon"></i>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="table-responsive table-card mt-3 mb-1">
                        <table class="table align-middle table-nowrap" id="customerTable">
                            <thead class="table-light">
                                <tr class="text-center">
                                    <th class="sort" data-sort="customer_name">UserName</th>
                                    <th class="sort" data-sort="email">Date</th>
                                    <th class="sort" data-sort="phone">Intime</th>
                                    <th class="sort" data-sort="date">OutTime</th>
                                    <th class="sort" data-sort="status">TotalHours</th>
                                    <th class="sort" data-sort="status">Action</th>
                                </tr>
                            </thead>
                            <tbody class="text-center" id="TableDataAttendance"></tbody>
                        </table>
                        <div class="noresult" style="display: none">
                            <div class="text-center">
                                <lord-icon src="https://cdn.lordicon.com/msoeawqm.json" trigger="loop" colors="primary:#25a0e2,secondary:#00bd9d" style="width:75px;height:75px">
                                </lord-icon>
                                <h5 class="mt-2">Sorry! No Result Found</h5>
                                <p class="text-muted mb-0">
                                    We've searched more than 150+ Orders We did not find any
                                    orders for you search.
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="modal fade" id="EditTimeModel" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered">
                            <div class="modal-content">
                                <div class="modal-header bg-light p-3">
                                    <h5 class="modal-title" id="exampleModalLabel"></h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" id="close-modal"></button>
                                </div>

                                <div class="modal-body">
                                    <div class="mb-3">
                                        <label for="customername-field" class="form-label">AttandanceId</label>
                                        <input id="AttandanceId" class="form-control" disabled />
                                    </div>

                                    <div class="mb-3">
                                        <label for="customername-field" class="form-label">UserName</label>
                                        <input id="UserName" class="form-control" disabled />
                                    </div>

                                    <div class="mb-3">
                                        <label for="email-field" class="form-label">Date</label>
                                        <input id="Date" class="form-control" disabled />
                                    </div>

                                    <div class="mb-3">
                                        <label for="phone-field" class="form-label">Intime</label>
                                        <input id="Intime" class="form-control" disabled />
                                    </div>

                                    <div class="mb-3">
                                        <label for="date-field" class="form-label">OutTime</label>
                                        <input type="datetime" id="OutTime" class="form-control" />
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <div class="hstack gap-2 justify-content-end">
                                        <button type="button" class="btn btn-light" data-bs-dismiss="modal">Close</button>
                                        <button type="submit" class="btn btn-success" onclick="UpdateUserAttendance();" id="add-btn">Update Time</button>
                                        <!-- <button type="button" class="btn btn-success" id="edit-btn">Update</button> -->
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="d-flex justify-content-end">
                        <div class="pagination-wrap hstack gap-2">
                            <a class="page-item pagination-prev disabled" href="javascrpit:void(0)">
                                Previous
                            </a>
                            <ul class="pagination listjs-pagination mb-0"><li class="active"><a class="page" href="#" data-i="1" data-page="8">1</a></li></ul>
                            <a class="page-item pagination-next" href="javascript:void(0);">
                                Next
                            </a>
                        </div>
                    </div>
                </div>
            </div><!-- end card -->
        </div>
        <!-- end col -->
    </div>
    <!-- end col -->
</div>



<script src="~/lib/jquery/dist/jquery.js"></script>

<script src="~/moduls/userattendancescript.js"></script>
