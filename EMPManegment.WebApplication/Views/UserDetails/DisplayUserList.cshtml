@model IEnumerable<EMPManegment.EntityModels.View_Model.EmpDetailsView>
@{
    ViewData["Title"] = "DisplayUserList";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}
<div class="table-responsive">
    <table class="table align-middle mb-0">
        <thead class="table-light">
            <tr>
                <th scope="col">Department</th>
                <th scope="col">UserName</th>
                <th scope="col">Name</th>
                <th scope="col">Gender</th>
                <th scope="col">DateOfBirth</th>
                <th scope="col">Email</th>
                <th scope="col">PhoneNumber</th>
                <th scope="col">Country</th>
                <th scope="col">State</th>
                <th scope="col">City</th>
                <th scope="col">Address</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() > 0)
            {
                @foreach (var d in Model)
                {
                    <tr>
                        <td>@d.DepartmentName</td>
                        <td>@d.UserName</td>
                        <td>
                            <div class="d-flex gap-2 align-items-center">
                                <div class="flex-shrink-0">
                                    <img src="~/@d.Image" alt="" class="avatar-xs rounded-circle" />
                                </div>
                                <div class="flex-grow-1">
                                    @d.FirstName  @d.LastName
                                </div>
                            </div>
                        </td>
                        <td>@d.Gender</td>
                        <td>@d.DateOfBirth.Value.ToShortDateString()</td>
                        <td>@d.Email</td>
                        <td>@d.PhoneNumber</td>
                        <td>@d.CountryName</td>
                        <td>@d.StateName</td>
                        <td>@d.CityName</td>
                        <td>@d.Address</td>
                    </tr>
                }
            }
            else
            {
                <tr class="text-center">
                    <td colspan="5"><h2 class="text-warning bg-info">No Records</h2></td>
                </tr>
            }
        </tbody>
    </table>
    <!-- end table -->
</div>
<!-- end table responsive -->