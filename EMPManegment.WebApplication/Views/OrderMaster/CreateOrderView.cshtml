@{
    ViewData["Title"] = "CreateOrderView";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-xxl-9">
        <div class="card">
            <form id="createproductform" autocomplete="off">
                <div class="card-body border-bottom border-bottom-dashed p-4">
                    <div class="row">
                        <div class="col-lg-4">
                            <div class="profile-user mx-auto  mb-3">
                                <input id="profile-img-file-input" type="file" class="profile-img-file-input" />
                                <label for="profile-img-file-input" class="d-block" tabindex="0">
                                    <span class="overflow-hidden border border-dashed d-flex align-items-center justify-content-center rounded" style="height: 60px; width: 256px;">
                                        <img src="~/UserHome/minimal/assets/images/logo-dark.png" class="card-logo card-logo-dark user-profile-image img-fluid" alt="logo dark">
                                        <img src="~/UserHome/minimal/assets/images/logo-light.png" class="card-logo card-logo-light user-profile-image img-fluid" alt="logo light">
                                    </span>
                                </label>
                            </div>
                        </div>
                        <!--end col-->
                        <div class="col-lg-4 ms-auto">
                            <div class="mb-2">
                                <div class="input-light">
                                    <select class="form-control bg-light border-0" data-choices data-choices-search-false name="OrderType" id="OrderType">
                                        <option selected disabled value="">--Order Type--</option>
                                        <option value="Sale">Sale</option>
                                        <option value="Purchase">Purchase</option>
                                    </select>
                                    <input type="hidden" class="form-control bg-light border-0" id="OrderTypeId" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--end row-->
                </div>
                <div class="card-body p-4">
                    <div class="row g-3">
                        <div class="col-lg-4 col-sm-6">
                            <label for="orderId" class="text-muted text-uppercase fw-semibold">Order ID</label>
                            <input type="text" id="orderId" class="form-control bg-light border-0" name="orderId" value="@ViewBag.OrderId" readonly />
                        </div>
                        @*                         <!--end col-->
                        <div class="col-lg-3 col-sm-6">
                        <div>
                        <label for="date-field">Date</label>
                        <input type="text" class="form-control bg-light border-0" id="date-field" data-provider="flatpickr" data-time="true" placeholder="Select Date-time">
                        </div>
                        </div> *@
                        <!--end col-->
                        <div class="col-lg-4 col-sm-6">
                            <label for="choices-payment-status" class="text-muted text-uppercase fw-semibold">Payment Status</label>
                            <div class="input-light">
                                <select class="form-control bg-light border-0" id="txtPaymentStatus" data-choices data-choices-search-false>
                                    <option selected disabled value="">Select Payment Status</option>
                                    <option value="Paid">Paid</option>
                                    <option value="Unpaid">Unpaid</option>
                                    <option value="Refund">Refund</option>
                                </select>
                            </div>
                        </div>
                        <!--end col-->
                        <div class="col-lg-4 col-sm-6">
                            <div>
                                <label for="payment" class="text-muted text-uppercase fw-semibold">Payment Method</label>
                                <div class="input-light">
                                    <select class="form-control bg-light border-0" data-choices data-choices-search-false name="payment" id="paymentMethod">
                                        <option selected disabled value="">Payment Method</option>
                                        <option value="Mastercard">Mastercard</option>
                                        <option value="Visa">Visa</option>
                                        <option value="COD">COD</option>
                                        <option value="Paypal">Paypal</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <!--end col-->
                    </div>
                    <!--end row-->
                </div>
                <div class="card-body p-4 border-top border-top-dashed">
                    <div class="row">
                        <div class="col-lg-4 col-sm-6">
                            <div>
                                <label for="orderdate" class="text-muted text-uppercase fw-semibold">Order Date</label>
                            </div>
                            <div class="mb-2">
                                <input type="text" id="orderdate" class="form-control" name="orderdate" data-provider="flatpickr" data-date-format="d M, Y" data-enable-time data-time="true" placeholder="Select Order-Date" />
                            </div>
                        </div>
                        <!--end col-->
                        <div class="col-sm-6 ms-auto">
                            <div class="row">
                                <div class="col-lg-8">
                                    <div>
                                        <label for="deliverydate" class="text-muted text-uppercase fw-semibold">Delivery Date</label>
                                    </div>
                                    <div class="mb-2">
                                        <input type="text" id="deliverydate" class="form-control" name="deliverydate" data-provider="flatpickr" data-date-format="d M, Y" data-enable-time data-time="true" placeholder="Select Delivery-Date" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--end col-->
                    </div>
                    <!--end row-->
                </div>
                <div class="card-body p-4 border-top border-top-dashed">
                    <div class="row">
                        <form id="dropdownValidationForm">
                            <div class="col-lg-4 col-sm-4">
                                <div>
                                    <label for="txtvendorname" class="text-muted text-uppercase fw-semibold">Vendor Name</label>
                                </div>
                                <div class="mb-2">
                                    <div class="input-light">
                                        <select class="text-muted text-uppercase fw-semibold" id="txtvendorname" name="txtvendorname" style="border:hidden;">
                                            <option selected disabled value="">----Select Vendor Name---</option>
                                        </select>
                                        <input type="hidden" class="text-muted text-uppercase fw-semibold" id="txtvendornameid">
                                        <div id="vendorvalidationMessage" class="text-danger"></div>
                                    </div>
                                </div>
                            </div>
                            <!--end col-->
                            <div class="col-sm-4 ms-auto">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div>
                                            <label for="productname" class="text-muted text-uppercase fw-semibold">Product</label>
                                        </div>
                                        <div class="mb-2">
                                            <div class="input-light">
                                                <select id="productname" class="text-muted text-uppercase fw-semibold" style="border:hidden;">
                                                    <option selected disabled value="">--Select Product--</option>
                                                </select>
                                                <input type="hidden" class="text-muted text-uppercase fw-semibold" id="txtProductnameid">
                                                <div id="productvalidationMessage" class="text-danger"></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!--end col-->
                            <div class="col-sm-4 ms-auto">
                                <div class="row">
                                    <div class="col-lg-8">
                                        <div>
                                            <label for="searchproductname" class="text-muted text-uppercase fw-semibold">Product Names</label>
                                        </div>
                                        <div class="mb-2">
                                            <div class="input-light">
                                                <select id="searchproductname" class="text-muted text-uppercase fw-semibold" style="border:hidden;">
                                                    <option selected disabled value="">--Select ProductName--</option>
                                                </select>
                                                <input type="hidden" class="text-muted text-uppercase fw-semibold" id="searchproductnameid">
                                                <div id="searchvalidationMessage" class="text-danger"></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-2 ms-auto">
                                <a id="addItemButton" class="btn btn-secondary fw-small" onclick="SerchProductDetailsById()">Add Product</a>
                            </div>
                            <!--end col-->
                            <div colspan="3">
                            </div>
                        </form>
                    </div>
                    <!--end row-->
                </div>

                <!---- Product Details ---->

                <div class="card-body p-4">
                    <div class="table-responsive">
                        <table class="invoice-table table table-borderless table-nowrap mb-0">
                            <thead class="align-middle">
                                <tr class="table-active">
                                    <th scope="col" style="width: 50px;">#</th>
                                    <th scope="col" style="width: 400px;">
                                        Product Details
                                    </th>
                                    <th scope="col" style="width: 220px;">
                                        Rate
                                    </th>
                                    <th scope="col" style="width: 120px;">
                                        GST
                                    </th>
                                    <th scope="col" style="width: 120px;">
                                        GSTPrice
                                    </th>
                                    <th scope="col" style="width: 120px;">Quantity</th>
                                    <th scope="col" class="text-end" style="width: 170px;">Amount</th>
                                    <th scope="col" class="text-end" style="width: 120px;">Action</th>
                                </tr>
                            </thead>
                            <div>
                                <form id="newRowfrm" style="display: none;">
                                </form>
                                <table>
                                    <tbody id="addNewlink">
                                    </tbody>
                                </table>
                            </div>

                            <tbody>
                                <tr id="newForm" style="display: none;"><td class="d-none" colspan="5"></td></tr>
                                <tr class="border-top border-top-dashed mt-2">
                                    <td colspan="3"></td>
                                    <td colspan="2" class="p-0">
                                        <table class="table table-borderless table-sm table-nowrap align-middle mb-0">
                                            <tbody>
                                                <tr>
                                                    <th scope="row">Sub Total</th>
                                                    <td style="width:150px;">
                                                        <input type="text" class="form-control bg-light border-0" id="cart-subtotal" placeholder="$0.00" style="width: 80px;" readonly />
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <th scope="row">Estimated Tax (12.5%)</th>
                                                    <td>
                                                        <input type="text" class="form-control bg-light border-0" id="cart-tax" placeholder="$0.00" readonly />
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <th scope="row">Total Gst(18%)</th>
                                                    <td>
                                                        <input type="text" class="form-control bg-light border-0" id="totalgst" placeholder="$0.00" readonly />
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <th scope="row">Discount <small class="text-muted">(VELZON15)</small></th>
                                                    <td>
                                                        <input type="text" class="form-control bg-light border-0" id="cart-discount" placeholder="$0.00" readonly />
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <th scope="row">Shipping Charge</th>
                                                    <td>
                                                        <input type="text" class="form-control bg-light border-0" id="cart-shipping" placeholder="$0.00" readonly />
                                                    </td>
                                                </tr>
                                                <tr class="border-top border-top-dashed">
                                                    <th scope="row">Total Amount</th>
                                                    <td>
                                                        <input type="text" class="form-control bg-light border-0" id="cart-total" placeholder="$0.00" readonly />
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                        <!--end table-->
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <!--end table-->
                    </div>
                    <div class="row mt-3">
                        <div class="col-lg-4">
                            <div class="mb-2">
                                <label for="choices-payment-type" class="form-label text-muted text-uppercase fw-semibold">Payment Details</label>
                                <div class="input-light">
                                    <select class="form-control bg-light border-0" data-choices data-choices-search-false data-choices-removeItem id="choices-payment-type">
                                        <option value="">Payment Method</option>
                                        <option value="Mastercard">Mastercard</option>
                                        <option value="Credit Card">Credit Card</option>
                                        <option value="Visa">Visa</option>
                                        <option value="Paypal">Paypal</option>
                                    </select>
                                </div>
                            </div>
                            <div class="mb-2">
                                <input class="form-control bg-light border-0" type="text" id="cardholderName" placeholder="Card Holder Name">
                            </div>
                            <div class="mb-2">
                                <input class="form-control bg-light border-0" type="text" id="cardNumber" placeholder="xxxx xxxx xxxx xxxx">
                            </div>
                            <div>
                                <input class="form-control  bg-light border-0" type="text" id="amountTotalPay" placeholder="$0.00" readonly />
                            </div>
                        </div>
                        <!--end col-->
                    </div>
                    <!--end row-->
                    <div class="mt-4">
                        <label for="exampleFormControlTextarea1" class="form-label text-muted text-uppercase fw-semibold">NOTES</label>
                        <textarea class="form-control alert alert-info" id="exampleFormControlTextarea1" placeholder="Notes" rows="2" required>All accounts are to be paid within 7 days from receipt of invoice. To be paid by cheque or credit card or direct payment online. If account is not paid within 7 days the credits details supplied as confirmation of work undertaken will be charged the agreed quoted fee noted above.</textarea>
                    </div>
                    <div class="hstack gap-2 justify-content-end d-print-none mt-4">
                        <button type="submit" class="btn btn-success"><i class="ri-printer-line align-bottom me-1"></i> Save</button>
                        <a href="javascript:void(0);" class="btn btn-primary"><i class="ri-download-2-line align-bottom me-1"></i> Download Invoice</a>
                        <a href="javascript:void(0);" class="btn btn-danger"><i class="ri-send-plane-fill align-bottom me-1"></i> Send Invoice</a>
                    </div>
                </div>

            </form>
        </div>
    </div>
    <!--end col-->
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/moduls/orderdetailsscript.js"></script>
